@model TheatreCMS3.Areas.Rental.Models.TheaterRental

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Rental</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="rentalContainer">
  <div class="col-sm-12 col-md-12 col-lg-12">
    <section id="rentalForm">
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      @Html.HiddenFor(model => model.TheaterRentalID)

      <div class="form-group">
        @Html.LabelFor(model => model.RentalName, "Edit Rental Name", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-12">
          @Html.EditorFor(model => model.RentalName, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.RentalName, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-group">
        @Html.LabelFor(model => model.RentalCost, "Edit Rental Cost", htmlAttributes: new { @class = "control-label col-md-6" })
        <div class="col-md-12">
          @Html.EditorFor(model => model.RentalCost, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.RentalCost, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-group">
        @Html.LabelFor(model => model.FlawsAndDamages, "Edit Flaws And Damages", htmlAttributes: new { @class = "control-label col-md-8" })
        <div class="col-md-12">
          @Html.EditorFor(model => model.FlawsAndDamages, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.FlawsAndDamages, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-group">
        <div class="rentalButton col-md-12">
          <input type="submit" value="Save" class="btn btn-warning" />
        </div>
      </div>
      <div class="form-group">
        <div class="BackToButton col-md-12">
          @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-warning" })
        </div>
      </div>
      
    </section>
  </div>
</div>
  }

      
  
 


  @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
  }
