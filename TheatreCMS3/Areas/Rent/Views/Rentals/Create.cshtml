@model TheatreCMS3.Areas.Rent.Models.Rental

<script>
    $(document).ready(function () {
        $("#myselection").change(function () {
            if ($("#myselection").val() == 1) {

                $("#RO").show();
                $("#REO").hide();
                $("#RRO").hide();
            }
            else if ($("#myselection").val() == 2) {
                $("#RO").show();
                $("#REO").show();
                $("#RRO").hide();
            }
            else if ($("#myselection").val() == 3) {
                $("#RO").show();
                $("#REO").hide();
                $("#RRO").show();
            }
            else {
                $("#RO").hide();
                $("#REO").hide();
                $("#RRO").hide();
            }

        });
    })
</script>

