@model TheatreCMS3.Areas.Rent.Models.Rental


@{
  ViewBag.Title = "Create";
}


@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()
  <link rel="stylesheet" href="~/Content/Areas/Rent.css" type="text/css" />



  <div class="rental-create--form-horizontal">
    <h1 class="rental-create--form-label"> Create Rental</h1>
    <hr />
    <div class="rental-create--form-container">
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      <div class="form-group">
        @Html.LabelFor(model => model.RentalName, htmlAttributes: new { @class = "control-label col-md-2", id = "rental-create-label" })
        <div class="col-md-10">
          @Html.EditorFor(model => model.RentalName, new { htmlAttributes = new { placeholder = "Enter rental name", @class = "form-control", id = "rental-create-input" } })
          @Html.ValidationMessageFor(model => model.RentalName, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-group">
        @Html.LabelFor(model => model.RentalCost, htmlAttributes: new { @class = "control-label col-md-2", id = "rental-create-label" })
        <div class="col-md-10">
          @Html.EditorFor(model => model.RentalCost, new { htmlAttributes = new { placeholder = " Enter rental cost", @class = "form-control", id = "rental-create-input" } })
          @Html.ValidationMessageFor(model => model.RentalCost, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-group">
        @Html.LabelFor(model => model.FlawsAndDamages, htmlAttributes: new { @class = "control-label col-md-2", id = "rental-create-label" })
        <div class="col-md-10">
          @Html.EditorFor(model => model.FlawsAndDamages, new { htmlAttributes = new { placeholder = "Enter any flaws or damages", @class = "form-control", id = "rental-create-input" } })
          @Html.ValidationMessageFor(model => model.FlawsAndDamages, "", new { @class = "text-danger" })
        </div>
      </div>

      
      



      <div class="form-group" id="rental-create--formSubmit">
        <div class="col-md-offset-2 col-md-10">
          <input type="submit" value="CREATE" class="btn btn-default" id="rental-create-createButton" />
        </div>
      </div>
    </div>
  </div>
}

<div class="rental-create--form-return">
  @Html.ActionLink("BACK TO LIST", "Index", new { @class = "rental-create--returnLink", id = "rental-create-backButton" })
</div>

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
