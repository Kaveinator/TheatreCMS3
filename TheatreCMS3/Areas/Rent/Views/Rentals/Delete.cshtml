@using TheatreCMS3.Areas.Rent.Models
@model dynamic

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Rental</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Rental Name
        </dt>

        <dd>
            @Model.Rental.RentalName
        </dd>

        <dt>
            Rental Cost
        </dt>

        <dd>
            @Model.Rental.RentalCost
        </dd>

        <dt>
            Flaws and Damages
        </dt>

        <dd>
            @Model.Rental.FlawsAndDamages
        </dd>

        @if (Model.Rental.GetType().Name == "RentalEquipment")
        {
            <dt>
                Choking Hazard
            </dt>

            <dd>
                @Model.RentalEquipment.ChokingHazard
            </dd>

            <dt>
                Suffocation Hazard
            </dt>

            <dd>
                @Model.RentalEquipment.SuffocationHazard
            </dd>

            <dt>
                Purchase Price
            </dt>

            <dd>
                @Model.RentalEquipment.PurchasePrice
            </dd>
        }
        @if (Model.Rental.GetType().Name == "RentalRoom")
        {
            <dt>
                Room Number
            </dt>

            <dd>
                @Model.RentalRoom.RoomNumber
            </dd>

            <dt>
                Square Footage
            </dt>

            <dd>
                @Model.RentalRoom.SquareFootage
            </dd>

            <dt>
                Max Occupancy
            </dt>

            <dd>
                @Model.RentalRoom.MaxOccupancy
            </dd>
        }

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
