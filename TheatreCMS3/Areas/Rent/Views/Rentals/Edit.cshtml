@model TheatreCMS3.Areas.Rent.Models.Rental

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-wrapper">
    <h4 class="crud-heading">Edit Rental</h4>
    <div class="flex-container">
        



        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RentalId)

        <div class="form-group flex-formgroup">
            @Html.LabelFor(model => model.RentalName, htmlAttributes: new { @class = "control-label col-md-2 ALRent-label px-5" })
            <div class="ALRent-input-container">
                @Html.EditorFor(model => model.RentalName, new { htmlAttributes = new { @class = "form-control ALRent-input" } })
                @Html.ValidationMessageFor(model => model.RentalName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group flex-formgroup">
            @Html.LabelFor(model => model.RentalCost, htmlAttributes: new { @class = "control-label col-md-2 ALRent-label px-5" })
            <div class="ALRent-input-container">
                @Html.EditorFor(model => model.RentalCost, new { htmlAttributes = new { @class = "form-control ALRent-input" } })
                @Html.ValidationMessageFor(model => model.RentalCost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="">
            @Html.LabelFor(model => model.FlawsAndDamages, htmlAttributes: new { @class = "control-label col-md-2 ALRent-label px-5" })
            <div class="ALRent-input-container">
                @Html.EditorFor(model => model.FlawsAndDamages, new { htmlAttributes = new { @class = "form-control ALRent-input" } })
                @Html.ValidationMessageFor(model => model.FlawsAndDamages, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="ALRent-input-container">
                <input type="submit" value="Save" class="btn col-12 mx-auto mt-3 ALRent-btn-create" />
            </div>
            <div class="ml-3">
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
