@model TheatreCMS3.Areas.Rent.Models.RentalHistory
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2 class="rent-create--h2">Edit Rental History</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!-- FORM begins -->
    <div class="form-horizontal rent-create--form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group container">
            <!-- LABEL Row -->
            <div class="row">
                <div class="col-md-8">
                    <!-- RENTAL Label -->
                    @Html.LabelFor(model => model.Rental, htmlAttributes: new { @class = "control-label col-md-2" })
                </div>

                <div class="col-md-4">
                    <!-- RENTAL DAMAGED Checkbox Label -->
                    @Html.LabelFor(model => model.RentalDamaged, "Damaged?", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>
        </div>

        <div class="form-group container">
            <!-- TEXT & CHECKBOX Row -->
            <div class="row">
                <!-- RENTAL Text Field -->
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
                </div>

                <!-- RENTAL DAMAGED Checkbox -->
                <div class="checkbox col-md-3">
                    @Html.CheckBoxFor(model => model.RentalDamaged, new { onclick = "is_Checked()", @class = "check-box" })
                    @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- DAMAGES INCURRED / Notes begins -->
        <div class="form-group container">
            <div class="row">
                <div class="col-md-8 DamagedLabel">
                    @Html.LabelFor(model => model.DamagesIncurred, "Notes", htmlAttributes: new { @class = "control-label col-md-2" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-9">
                    @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <!-- BUTTONS begin -->
        <div class="form-group container">
            <div class="row justify-content-md-center">
                <div class="col-sm-3">
                    <a href='@Html.ActionLink("Back to List", "Index")'>
                        <input type="submit" value="Back to List" class="btn btn-secondary" />
                    </a>
                </div>
                <div class="col-sm-3">
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}







