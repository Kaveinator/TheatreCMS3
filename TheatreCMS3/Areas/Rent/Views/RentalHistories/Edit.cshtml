@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="rentalhistory-create--h2">Edit RentalHistory</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="rentalhistory-create--container">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.RentalHistoryId)  

    <div class="form-group">

        <div class="rentalhistory-create-damagedlabel">

            <div class="rentalhistory-create--div">

                <div class="rentalhistory-create-damaged?">
                    @Html.LabelFor(model => model.RentalDamaged, htmlAttributes: new { style = "font-weight: bold;", @class = "control-label col-md-2 " })
                </div>

                <div class="rentalhistory-create--checkboxtransform">

                    @Html.EditorFor(model => model.RentalDamaged, new { @onclick = "changelabel(RentalDamaged, lbldmg)" })
                    @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })

                </div>

            </div>

        </div>

    </div>


    <div>
        <div class ="rentalhistory-create--rentalform">
            @Html.LabelFor(model => model.DamagesIncurred, "Rental" ,htmlAttributes: new { style = "font-weight: bold;" , @class = "control-label col-md-2" })
        </div>    

        @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control rentalhistory-createEdit--formbox" } })
        @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })

    </div>


    <div class="rentalhistory-create--rentalform2">

        @Html.LabelFor(model => model.DamagesIncurred, "Notes", htmlAttributes: new { style = "font-weight: bold; transform: translate(0px,0px); white-space: nowrap; ", @id = "lbldmg" })     <!-- Notes! -->
        <p id="text" style="display:none">Damages Incurred</p>

        <div class="rentalhistory-create-rentalformbox2">
            @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
        </div>

    </div>


    <div class="rentalhistory--create-sidebyside">
        <input type="submit" value="Create" class="rentalhistory-create--createbtn" />
    </div>
    <div class="rentalhistory-create--backtolist">
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
