@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="rental_history-edit--content_title" style=" text-align: center; font-size: xx-large; ">Edit Rental History</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-6 rental_history-edit--form" style="background-color: #db1a11;margin-left: auto;margin-right: auto;padding: 10px;border-radius: 10px;">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <div class="row">
            <div class="col-md-6">
                @Html.LabelFor(model => model.Rental, "Rental", htmlAttributes: new { @class = "control-label col-md-1" })
                <div class=" col-md-12">
                    @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-5">
                @Html.LabelFor(model => model.RentalDamaged, "Damaged?", htmlAttributes: new { @class = "control-label col-md-1 " })
                <div class="col-md-offset-2 col-md-10" onload="myFunction()" onclick="myFunction()">
                    @Html.EditorFor(model => model.RentalDamaged)
                    @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <p class="col-md-offset-2" id="rental_history-edit--alert"></p>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.DamageIncurred, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DamageIncurred, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row justify-content-center" style="padding-top: .5rem;">
            <div class="col-md-2 rental_history-edit--back_btn" style="border-radius: 5px;color: #f8f9fa;background-color: #343a40;">
                @Html.ActionLink("Back to List", "Index")
            </div>
            <div class="rental_history-edit--create_btn" style="background-color: #28a745;border-radius: 5px;color: #fffbfb;">
                <div class="col-md-5">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    </div>
}

<script>
    function myFunction() {
        // Get the checkbox
        var checkbox = document.getElementById("RentalDamaged");
        // Get the output text
        var text = document.getElementById("rental_history-create--alert");
        if (checkbox.checked == true) {
            text.innerHTML = "DamageIncurred"
        } if (checkbox.checked != true) { text.innerHTML = "Notes" }
    }
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/Areas/Rent.css")
    <script src="~/Scripts/Areas/Rent.js"></script>
    
    }
