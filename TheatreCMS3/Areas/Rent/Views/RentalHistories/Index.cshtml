@model IEnumerable<TheatreCMS3.Areas.Rent.Models.RentalHistory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2 class="text-center p-3">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-container row">
    <div id="most-recent-rental-histories" class="col-auto">
        Most recent Rental Histories
    </div>
    <div id="sorted-by" class="ml-auto col-xs-auto">
        Sorted By:
    </div>
    <div class="dropdown ml-auto my-auto h-80 col-xs-auto pr-2">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Sort By:
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                <button class="dropdown-item" onclick="noSorting()">No Extra Sorting...</button>
                <button class="dropdown-item" onclick="damagedRentals()">Damaged Rentals</button>
                <button class="dropdown-item" onclick="undamagedRentals()">Undamaged Rentals</button>
                <button class="dropdown-item" onclick="rentalsAZ()">Rentals A-Z</button>
                <button class="dropdown-item" onclick="rentalsZA()">Rentals Z-A</button>
            </div>
        </div>
    </div>

    <table id="rental-list"></table>


</div>
