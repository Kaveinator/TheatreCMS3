@model IEnumerable<TheatreCMS3.Areas.Rent.Models.RentalHistory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center p-3">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="table-container">
    <p id="most-recent-rental-histories">Most recent Rental Histories</p>
    <table width="100%">
        @foreach (var item in Model)
        {

            <tr class="bordered"></tr>

            <tr class="row p-xl-auto">
                <td class="fancy-checkbox">
                    @Html.DisplayFor(modelItem => item.RentalDamaged)
                    <i class="fa-solid fa-square-check unchecked" style="color: #00ff00;"></i>
                    <i class="fa-solid fa-square-xmark checked" style="color: #ff0000;"></i>
                </td>

                <td id="item-name" class="badge badge-secondary col-auto">
                    @Html.DisplayFor(modelItem => item.Rental)
                </td>
                <td class="col text-nowrap">
                    @Html.DisplayFor(modelItem => item.DamagesIncurred)
                </td>

                <td class="col-auto align-self-end">
                    @Html.ActionLink("Edit", "Edit", new { id = item.RentalHistoryId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.RentalHistoryId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.RentalHistoryId })
                </td>

                <td class="dropdown align-self-end pr-3">
                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="./RentalHistories/Edit/@item.RentalHistoryId">Edit</a>
                        <a class="dropdown-item" href="./RentalHistories/Details/@item.RentalHistoryId">Details</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="./RentalHistories/Delete/@item.RentalHistoryId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
