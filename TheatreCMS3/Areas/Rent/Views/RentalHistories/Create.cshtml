@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="RentalHistory-Create--formContainer">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <h2 class="RentalHistory-Create--heading">Create Rental History</h2>

        <div class="form-horizontal RentalHistory-Create--form">
            <div class="form-row RentalHistory-Create--formRow">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.Rental, "Rental", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group col-md-6">
                    @Html.LabelFor(model => model.RentalDamaged, "Damaged?", htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        <div class="checkbox RentalHistory-Create--checkboxDiv">
                            @Html.CheckBoxFor(model => model.RentalDamaged, htmlAttributes: new { @id = "RentalHistory-Create--checkbox", @onclick = "toggleNotes()" })
                            @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group col-md-12">
                    @Html.LabelFor(model => model.DamagesIncurred, "Notes", htmlAttributes: new { @class = "control-label col-md-12", @id = "RentalHistory-Create--label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-12 RentalHistory-Create--flexContainer">

                    <div class="form-group col-md-6">
                        <div class="RentalHistory-Create--backContainer">
                            @Html.ActionLink("Back to List", "Index", "RentalHistoriesController", new { @class = " btn btn-default RentalHistory-Create--backButton" })
                        </div>
                    </div>

                    <div class="form-group col-md-6">
                        <div class="RentalHistory-Create--createContainer">
                            <input type="submit" value="Create" class="btn btn-default RentalHistory-Create--createButton" />
                        </div>
                    </div>

                </div>

            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
