@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center RentalHistory-create--title">
    <h1>Create Rental History</h1>
</div>
<div class="row no-gutters m-3">
    <div class="card col-sm-14 col-md-12 col-lg-8 mx-auto shadow RentalHistory-create--form">
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row">
                    @Html.LabelFor(model => model.Rental, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                    @Html.LabelFor(model => model.RentalDamaged, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                </div>
                <div class="form-group row">
                    <div>
                        @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control col-sm-10" } })
                        @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
                    </div>
                    <div class="checkbox">
                        @Html.EditorFor(model => model.RentalDamaged, new { htmlAttributes = new { @class = "form-control col-sm-10" } })
                        @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.DamagesIncurred, htmlAttributes: new { @class = "col-sm-4 col-form-label" })
                </div>
                <div class="form-group row">
                    @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control col-sm-10" } })
                    @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
                </div>
                <div class="form-group row">
                    <div class="mx-auto">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>
                    <div class="mx-auto">
                        <button class="btn btn-secondary">@Html.ActionLink("Back to List", "Index")</button>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</div>