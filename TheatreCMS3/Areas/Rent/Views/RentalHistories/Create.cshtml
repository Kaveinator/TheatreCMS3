@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Create Rental History";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-3">Create Rental History</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="rentalHistory-create--wholeForm">
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="rentalHistory-create--formContainer">
                <div class="form-group">
                    <strong>
                        @Html.LabelFor(model => model.Rental, htmlAttributes: new { @class = "control-label col-md-2" })
                    </strong>
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <strong>
                        @Html.LabelFor(model => model.RentalDamaged, "Damaged?", htmlAttributes: new { @class = "control-label col-md-10" })
                    </strong>
                    <div class="col-md-10 rentalHistory-create--damagedCheck">
                        <div class="rentalHistory-create--checkbox">
                            @Html.EditorFor(model => model.RentalDamaged, "", new { @onclick = "changedText()" })
                            @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" } )
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <strong>
                    @Html.LabelFor(model => model.DamagedIncurred, "Notes", htmlAttributes: new { @class = "control-label col-md-2", @id = "changeName" })
                </strong>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.DamagedIncurred, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.DamagedIncurred, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="rentalHistory-create--allButtons">
                <div class="rentalHistory-create--backToList">
                   <button class="btn btn-dark" onclick='@Html.ActionLink("Back to List", "Index")'>Back to List</button>
                </div>
                <div class="rentalHistory-create--createButton">
                   <button type="submit" class="btn btn-success">Create</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/Areas/Rent.js" type="text/javascript"></script>
}
