                @Html.EditorFor(model => model.RentalDamaged)
                @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
            </div>*@
        </div>




        <div class="form-group">
            @Html.LabelFor(model => model.DamagesIncurred, "Damages Incurred", htmlAttributes: new { @class = "control-label col" })
            <div class="col-md-10 RentalHistory-Create-controls DamagesIncurred">
                @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="RentalHistory-form-button-container text-center">
            <div class="row justify-content-center">
                <div class="col">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
                </div>
                <div class="col">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>



