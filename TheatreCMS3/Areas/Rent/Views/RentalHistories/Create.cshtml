@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="rent-headline">
    <h2>Create Rental History</h2>
</div>


    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
    
            <div class="rent-form">

                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="container">
                    <div class="row">

                        <div class="col-6 rent-input">
                            @Html.LabelFor(model => model.Rental, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
                            </div>
           

                                <div class="checkbox rent-checkbox">
                                    @Html.LabelFor(model => model.RentalDamaged, "Damaged?", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.RentalDamaged)
                                    @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
                                </div>
                           
                    </div>
                </div>

                        <div class="container">
                            <div class="row">

                                    <div class="col-12 rent-input">
                                       <p id="change">@Html.LabelFor(model => model.DamageIncurred, "Notes", htmlAttributes: new { @class = "control-label col-md-2" })</p>
                                        @Html.EditorFor(model => model.DamageIncurred, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DamageIncurred, "", new { @class = "text-danger" })

                                    </div>

                            <div class="form-group rent-button2">
                                <div class="col-md-offset-2 col-md-10">
                                    <button type="submit" class="btn btn-secondary"> @Html.ActionLink("Back to List", "Index")</button>
                                </div>
                            </div>

                            <div class="form-group rent-button">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-success" />
                                </div>
                            </div>

                        </div>
                  </div>
                <script src="~/Content/Areas/Rent.js"></script>
        </div>
}


