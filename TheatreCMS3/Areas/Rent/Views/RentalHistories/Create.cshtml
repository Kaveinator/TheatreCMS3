@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="rentalhistory-create--title">Create Rental History</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="rentalhistory-create--form">

    <div class="rentalhistory-create--row1">
        <div class="retalhistory-create--label">
            @Html.LabelFor(model => model.Rental, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="retalhistory-create--label">
            @Html.LabelFor(model => model.RentalDamaged, "Damaged?", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div>
                    @Html.EditorFor(model => model.RentalDamaged, new { htmlAttributes = new { @id = "damaged" } })   
                    @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger"})
                </div>
            </div>
        </div>
    </div>

    <div class="retalhistory-create--label" id="div1">
        @Html.LabelFor(model => model.DamagesIncurred, "Notes", htmlAttributes: new { @class = "control-label col-md-2", @id = "trigger"})
        <div class="col-md-10">
            @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="rentalhistory-create--btns">
        <div>
            <div class="btn btn-dark">@Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "cms-text-light" })</div>
 
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
