@model TheatreCMS3.Areas.Rent.Models.RentalPhotos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h1 class="RentalPhoto-Create--header">Create Rental Photo</h1>
    <div class="RentalPhoto-Create--container-fluid">
        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="RentalPhoto-Create--form-group">
                @Html.LabelFor(model => model.RentalsName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="RentalPhoto-Create--col-md-10">
                    @Html.EditorFor(model => model.RentalsName, new { htmlAttributes = new { @class = "RentalPhoto-Create--form-control col-md-10", @placeholder = "Enter your rental name" } })
                    @Html.ValidationMessageFor(model => model.RentalsName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="RentalPhoto-Create--form-group">
                @Html.LabelFor(model => model.Damaged, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Damaged)
                        @Html.ValidationMessageFor(model => model.Damaged, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="RentalPhoto-Create--form-group">
                @Html.LabelFor(model => model.RentalPhoto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RentalPhoto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RentalPhoto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="RentalPhoto-Create--form-group">
                @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-10" })
                <div class="RentalPhoto-Create--col-md-10">
                    @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "RentalPhoto-Create--form-control col-md-10", @placeholder = "Enter details" } })
                    @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group postiton-relative">
                <div class="d-grid gap-2 col-6 mx-auto">
                    <input type="submit" value="Create" class="RentalPhoto-Create--Button" />
                </div>
            </div>
        </div>
    </div>

}

<div class="RentalPhoto-Create--Back">
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
