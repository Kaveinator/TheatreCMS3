@model TheatreCMS3.Areas.Rent.Models.RentalPhoto

@{
  ViewBag.Title = "Create";
  Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2 class="RentalPhotos-Create-Header">Create Rental Photo</h2>

@using (Html.BeginForm("Create", "RentalPhotos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
  <div class="RentalPhotos-Create-BackgroundContainer">
    @Html.AntiForgeryToken()
    <div class="RentalPhotos-Create-form-horizontal-container">
      <div class="RentalPhotos-Create-form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group RentalPhotos-Create-FeildAlign">
          @Html.LabelFor(model => model.RentalsName, htmlAttributes: new { @class = "control-label col-md-2 RentalPhotos-Create-FeildLabels" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.RentalsName, new { htmlAttributes = new { @class = "form-control RentalPhotos-Create-FeildBorder", placeholder = "Enter the name of the rental." } })
            @Html.ValidationMessageFor(model => model.RentalsName, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group RentalPhotos-Create-FeildAlign">
          @Html.LabelFor(model => model.Damaged, htmlAttributes: new { @class = "control-label col-md-2  RentalPhotos-Create-FeildLabels" })
          <div class="col-md-10">
            <div class="RentalPhotos-Create-checkbox">
              @Html.EditorFor(model => model.Damaged, "", new { @class = "RentalPhotos-Create-FeildBorder", placeholder = "Check the box if rental is damaged." })
              @Html.ValidationMessageFor(model => model.Damaged, "", new { @class = "text-danger" })
            </div>
          </div>
        </div>

        <div class="form-group RentalPhotos-Create-FeildAlign">
          @Html.LabelFor(model => model.RentalsPhoto, htmlAttributes: new { @class = "control-label col-md-2  RentalPhotos-Create-FeildLabels" })
          <div class="col-md-10">
            <input class="form-control RentalPhotos-Create-FeildBorder" ,placeholder="Add the rental photo here." />
          </div>
        </div>

        <div class="form-group RentalPhotos-Create-FeildAlign">
          @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2  RentalPhotos-Create-FeildLabels" })
          <div class="col-md-10 ">
            @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control RentalPhotos-Create-FeildBorder", placeholder = " Enter the details of the rental." } })
            @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="RentalPhotos-Create-ButtonsCenter">
          <div class="col-md-offset-2 col-md-10 RentalPhotos-Create-ButtonsCenter">
            <button type="submit" value="Create" class="btn RentalPhotos-Create-SubmitButton">Create</button>
          </div>

          <div class="col-md-offset-2 col-md-10 RentalPhotos-Create-ButtonsCenter">
            <button value="Index" class="btn RentalPhotos-Create-BackToListButton">Back To List</button>
          </div>
        </div>
      </div>
    </div>
  </div>
}