@model TheatreCMS3.Areas.Rent.Models.RentalPhoto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="RentalPhotos-Delete-Center">Details</h2>

<div class="RentalPhotos-Details-BackgroundOutContainer">
    <h4 class="RentalPhotos-Delete-Center">RentalPhoto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RentalsName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RentalsName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Damaged)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Damaged)
        </dd>


        <div class="form-group RentalPhotos-Create-FeildAlign">
            @Html.LabelFor(model => model.RentalsPhoto, htmlAttributes: new { @class = "control-label col-md-2  RentalPhotos-Create-FeildLabels" })
            <div class="col-md-10">
                <input class="form-control" type="file" name="UserImageFile" />
            </div>
        </div>


        <dd>
            @if (Model.RentalsPhoto != null)
            {
                var base64 = Convert.ToBase64String(Model.RentalsPhoto);
                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                Html.ActionLink("Click for details", "Details", new { Controller = "RentalPhotos", id = Model.RentalPhotoId }, new { @class = "RentalPhotos-Index-cardImage" });
                <img class="RentalPhotos-Index-cardImage" src="@imgsrc" />
            }
        </dd>
       

            <dt>
                @Html.DisplayNameFor(model => model.Details)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Details)
            </dd>

        </dl>
</div>
<span>
    <button class="RentalPhotos-Details-icon1wrapper">
        <i>
            @Html.ActionLink(" ", "Index", new { Controller = "RentalPhotos", id = Model.RentalPhotoId }, new { @class = "fas fa-arrow-left h2 RentalPhotos-Details-icon1" })
        </i>
    </button>
    <button class="RentalPhotos-Details-icon1wrapper" value="Edit">
        <i>
            @Html.ActionLink(" ", "Edit", new { Controller = "RentalPhotos", id = Model.RentalPhotoId }, new { @class = "fas fa-edit h2 fa-pen-square RentalPhotos-Details-icon2" })
        </i>
    </button>
  

</span>
