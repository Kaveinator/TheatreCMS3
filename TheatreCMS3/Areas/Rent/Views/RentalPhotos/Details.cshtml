@model TheatreCMS3.Areas.Rent.Models.RentalPhoto

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>RentalPhoto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RentalsName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RentalsName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Damages)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Damages)
        </dd>
        @{ 
            string image = "";
            if (Model.RentalPhotos != null)
            {
                image = Convert.ToBase64String(Model.RentalPhotos);
            }
        }

        <dt>
            @Html.DisplayNameFor(model => model.RentalPhotos)
        </dt>

        <dd>
            <image src ="data:image/jpg.base64, @image" class="image-index--size"></image>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Details)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Details)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.RentalPhotoId }) |
