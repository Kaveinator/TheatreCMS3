@model IEnumerable<TheatreCMS3.Areas.Rent.Models.RentalPhotos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RentalsName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Damaged)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentalPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    string text = "";
    if (item.RentalPhoto != null)
    {
        text = Convert.ToBase64String(item.RentalPhoto);
    }
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RentalsName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Damaged)
        </td>
        <td>
            <img src="data:image/jpg;base64,@text"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RentalPhotoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RentalPhotoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RentalPhotoId })
        </td>
    </tr>
}

</table>
