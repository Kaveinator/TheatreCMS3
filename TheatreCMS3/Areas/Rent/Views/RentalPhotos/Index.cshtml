@model IEnumerable<TheatreCMS3.Areas.Rent.Models.RentalPhoto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RentalsName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Damages)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RentalPhotos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    string image = "";
    if (item.RentalPhotos != null)
    {
        image = Convert.ToBase64String(item.RentalPhotos);
    }

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RentalsName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Damages)
        </td>
        <td>
            <image src="data:image/jpg;base64, @image" class="image"></image>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Details)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RentalPhotoId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RentalPhotoId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RentalPhotoId })
        </td>
    </tr>
}

</table>
