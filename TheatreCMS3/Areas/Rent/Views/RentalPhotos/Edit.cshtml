@model TheatreCMS3.Areas.Rent.Models.RentalPhotos

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h1 class="RentalPhoto-Edit--header">Edit Rental Photo</h1>

    <div class="RentalPhoto-Edit--container-fluid">
    
        <div class="form-horizontal">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RentalPhotoId)

            <div class="RentalPhoto-Edit--form-group">
                @Html.LabelFor(model => model.RentalsName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="RentalPhoto-Edit--col-md-10">
                    @Html.EditorFor(model => model.RentalsName, new { htmlAttributes = new { @class = "RentalPhoto-Edit--form-control col-md-10", @placeholder = "Edit your rental name" } })
                    @Html.ValidationMessageFor(model => model.RentalsName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="RentalPhoto-Edit--form-group">
                @Html.LabelFor(model => model.Damaged, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.Damaged)
                        @Html.ValidationMessageFor(model => model.Damaged, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="RentalPhoto-Edit--form-group">
                @Html.LabelFor(model => model.RentalPhoto, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RentalPhoto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RentalPhoto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="RentalPhoto-Edit--form-group">
                @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-10" })
                <div class="RentalPhoto-Edit--col-md-10">
                    @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "RentalPhoto-Edit--form-control col-md-10", @placeholder = "Edit details" } })
                    @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-8">
                    <input type="submit" value="Save" class="RentalPhoto-Edit--Button" />
                </div>
            </div>


            <div class="RentalPhoto-Edit--Back btn">
                @Html.ActionLink("Back to List", "Index", new { @class = "RentalPhoto-Edit--Back btn" })
            </div>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
