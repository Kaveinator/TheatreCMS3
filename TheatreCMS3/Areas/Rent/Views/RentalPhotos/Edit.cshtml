@model TheatreCMS3.Areas.Rent.Models.RentalPhoto

@{
  ViewBag.Title = "Edit";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="RentalPhotos-Edit-Header">Edit Rental Photo</h2>


@using (Html.BeginForm("Edit", "RentalPhotos", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
  <div class="RentalPhotos-Edit-BackgroundContainer">
    @Html.AntiForgeryToken()

    <div class="RentalPhotos-Edit-form-horizontal-container">
      <div class="form-horizontal RentalPhotos-Edit-form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RentalPhotoId)

        <div class="form-group RentalPhotos-Edit-FeildAlign">
          @Html.LabelFor(model => model.RentalsName, htmlAttributes: new { @class = "control-label col-md-2 RentalPhotos-Edit-FeildLabels" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.RentalsName, new { htmlAttributes = new { @class = "form-control RentalPhotos-Edit-FeildBorder" } })
            @Html.ValidationMessageFor(model => model.RentalsName, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group RentalPhotos-Edit-FeildAlign">
          @Html.LabelFor(model => model.Damaged, htmlAttributes: new { @class = "control-label col-md-2 RentalPhotos-Edit-FeildLabels" })
          <div class="col-md-10">
            <div class="RentalPhotos-Edit-checkbox">
              @Html.EditorFor(model => model.Damaged)
              @Html.ValidationMessageFor(model => model.Damaged, "", new { @class = "text-danger" })
            </div>
          </div>
        </div>

        <div class="form-group RentalPhotos-Edit-FeildAlign">
          @Html.LabelFor(model => model.RentalsPhoto, htmlAttributes: new { @class = "control-label col-md-2  RentalPhotos-Edit-FeildLabels" })
          <div class="col-md-10">
            <input class="form-control RentalPhotos-Edit-FeildBorder" ,placeholder="Add the rental photo here." />
          </div>

        </div>

        <div class="form-group RentalPhotos-Edit-FeildAlign">
          @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2 RentalPhotos-Edit-FeildLabels" })
          <div class="col-md-10">
            @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control RentalPhotos-Edit-FeildBorder" } })
            @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="RentalPhotos-Edit-ButtonsCenter">
          <div class="col-md-offset-2 col-md-10 RentalPhotos-Create-ButtonsCenter">
            <button type="submit" value="Save" class="btn RentalPhotos-Edit-SubmitButton">Save</button>
          </div>

          <div class="col-md-offset-2 col-md-10 RentalPhotos-Edit-ButtonsCenter">
            <button value="Index" class="btn RentalPhotos-Edit-BackToListButton">Back To List</button>
          </div>
        </div>
      </div>
    </div>
  </div>

}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
