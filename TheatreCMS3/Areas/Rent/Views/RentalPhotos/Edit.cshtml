@model TheatreCMS3.Areas.Rent.Models.RentalPhoto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm("Edit", "RentalPhotos", FormMethod.Post, new { enctype = "multipart/form_data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="RentalPhotos-Edit--form-contain text-center">
        <h2>Edit a Rental Photo</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.RentalPhotoId)

        <div class="form-group-photo">
            @Html.LabelFor(model => model.RentalsName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 offset-1 text-center">
                @Html.EditorFor(model => model.RentalsName, new { htmlAttributes = new { @class = "RentalPhotos-Edit--form-control", placeholder = "Rentals Name" } })
                @Html.ValidationMessageFor(model => model.RentalsName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-photo">
            @Html.LabelFor(model => model.Damages, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 offset-1 text-center">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Damages)
                    @Html.ValidationMessageFor(model => model.Damages, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group-photo">
            @Html.LabelFor(model => model.RentalPhotos, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 offset-1 text-center">
                @Html.EditorFor(model => model.RentalPhotos, new { htmlAttributes = new { @class = "RentalPhotos-Edit--form-control", placeholder = "Rental Photos" } })
                @Html.ValidationMessageFor(model => model.RentalPhotos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-photo">
            @Html.LabelFor(model => model.Details, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10 offset-1 text-center">
                @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "RentalPhotos-Eddit--form-control", placeholder = "Rental Photo Details" } })
                @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group-photo">
            <div class="col-md-10 offset-1 text-center">
                <input type="submit" value="Save" class="RentalPhotos-Edit-submitBtn" />
                <input type="button" value="Back to List" class="RentalPhotos-Edit-backBtn" onclick="location.href='@Url.Action("Back to List","Index")'" />
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
