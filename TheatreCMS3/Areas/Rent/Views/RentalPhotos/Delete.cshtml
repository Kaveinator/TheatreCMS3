@model TheatreCMS3.Areas.Rent.Models.RentalPhotos

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="RentalPhoto-Delete--header">Delete Page</h1>

<h3 style="text-align:center">Rental Photos</h3>
<div>
    <h4 class="RentalPhoto-Delete--header2">Are you sure you want to delete this?</h4>


    <div class="RentalPhoto-Delete--container">

        @{ string text = "";
            if (Model.RentalPhoto != null)
            {
                text = Convert.ToBase64String(Model.RentalPhoto);
            }
        }

        <div class="card RentalPhoto-Delete--card" style="width: 30rem; height: 30rem;">
            <img src="data:image/jpg;base64,@text" class="card-img-top RentalPhoto-Delete--img">
            <div class="card-body RentalPhoto-Delete--card-body">
                <h5 class="card-title RentalPhoto-Delete--card-title"></h5>
                <p class="card-text RentalPhoto-Delete--card-text"></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item RentalPhoto-Delete--item1">Title: @Html.DisplayFor(model => model.RentalsName)</li>
                <li class="list-group-item RentalPhoto-Delete--item2">@Html.DisplayFor(model => model.Details)</li>
                <li class="list-group-item RentalPhoto-Delete--item3">Damaged - @Html.DisplayFor(model => model.Damaged)</li>
            </ul>
            <div class="card-body RentalPhoto-Delete--card-body-bottom">
                <i href="#" class="card-link RentalPhoto-Delete--edit-link">@Html.ActionLink(" ", "Edit", new { id = Model.RentalPhotoId }, new { @class = "fa fa-edit" })</i>
                @*<i class="card-link RentalPhoto-Delete--delete-link" type="submit" value="Delete">@Html.ActionLink(" ", "Delete", new { id = Model.RentalPhotoId }, new { @class = "fa fa-trash" })</i>*@
                <input type="Submit" value="Delete" class="btn btn-danger"/>
                <i href="#" class="card-link RentalPhoto-Details--back-link">@Html.ActionLink(" ", "Index", new { id = Model.RentalPhotoId }, new { @class = "fa fa-arrow-left" })</i>
            </div>
        </div>

