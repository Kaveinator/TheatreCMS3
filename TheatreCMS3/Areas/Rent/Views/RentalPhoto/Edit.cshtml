@model TheatreCMS3.Areas.Rent.Models.RentalPhoto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href='https://fonts.googleapis.com/css?family=Oswald' rel='stylesheet'>

<center>
    <h2 class="RentalPhoto-EditCreate--H2">Edit a Rental Photo</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal RentalPhoto-EditCreate--Titles">
            @*<h4>RentalPhoto</h4>*@
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.RentalPhotoId)

        <div class="form-group">
            @Html.LabelFor(model => model.RentalsName, "RENTAL NAME", htmlAttributes: new { @class = "control-label col-md-2" })
            <hr class="RentalPhoto-EditCreate--HR" />
            <div class="col-md-9">
                @Html.EditorFor(model => model.RentalsName, new { htmlAttributes = new { @class = "form-control RentalPhoto-EditCreate--Form", @placeholder = "Enter the name of the rental here"  } })
                @Html.ValidationMessageFor(model => model.RentalsName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Damaged, "DAMAGES?", htmlAttributes: new { @class = "control-label col-md-2" })
            <hr class="RentalPhoto-EditCreate--HR" />
            <div class="col-md-9">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Damaged)
                    @Html.ValidationMessageFor(model => model.Damaged, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RentalPhotos, "ADD PHOTOS", htmlAttributes: new { @class = "control-label col-md-2" })
            <hr class="RentalPhoto-EditCreate--HR" />
            <div class="col-md-9">
                @Html.EditorFor(model => model.RentalPhotos, new { htmlAttributes = new { @class = "form-control RentalPhoto-EditCreate--Form" } })
                @Html.ValidationMessageFor(model => model.RentalPhotos, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Details, "DETAILS", htmlAttributes: new { @class = "control-label col-md-2" })
            <hr class="RentalPhoto-EditCreate--HR" />
            <div class="col-md-9">
                @Html.EditorFor(model => model.Details, new { htmlAttributes = new { @class = "form-control RentalPhoto-EditCreate--Form", @placeholder = "Enter details about the rental here" } })
                @Html.ValidationMessageFor(model => model.Details, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-2 text-right">
                <input type="submit" value="Save" class="RentalPhoto-EditCreate--CreateSaveBtn btn btn-lg" />
            </div>
            <div class="col-2 text-left">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "RentalPhoto-EditCreate--BackBtn btn btn-lg" })
            </div>
        </div>
     </div>
    }


</center>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
