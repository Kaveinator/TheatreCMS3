@model TheatreCMS3.Areas.Rent.Models.RentalSurvey

@{
    ViewBag.Title = "Create";
}

<h2>Create Rental Survey</h2>

<div class="container">
    <style>
        .container {
            box-sizing: content-box;
        }
    </style>

    @using (Html.BeginForm())
    {
        <style>
            input [type=text] {
                outline: none;
            }
                input[type=text]:focus {
                    border-color: #bd1a11;
                    background-color: #e9cd9e;
                }
            input:hover {
                border-color: #bd1a11;
            }
        </style>

        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            <div class="form-group">

                @Html.LabelFor(model => model.RecommendRentalRating, "Would you recommend us to a friend who needs to rent theatre equipment?", htmlAttributes: new { @class = "control-label col-md" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RecommendRentalRating, new { htmlAttributes = new { @class = "form-control", placeholder = "Please answer yes or no" } })
                    @Html.ValidationMessageFor(model => model.RecommendRentalRating, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.RentalCost, "What was the overall cost for your rental?", htmlAttributes: new { @class = "control-label col-md" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.RentalCost, new { htmlAttributes = new { @class = "form-control", placeholder = "00.00" } })
                    @Html.ValidationMessageFor(model => model.RentalCost, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ExperienceRating, "From a scale of 1-5 (1 = Poor, 5 = Excellent), how would you rate your overall experience with us?", htmlAttributes: new { @class = "control-label col-md" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ExperienceRating, new { htmlAttributes = new { @class = "form-control", placeholder = "Please state a number from 1-5" } })
                    @Html.ValidationMessageFor(model => model.ExperienceRating, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Feedback, htmlAttributes: new { @class = "control-label col-md" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Feedback, new { htmlAttributes = new { @class = "form-control", placeholder = "Comments/suggestions?" } })
                    @Html.ValidationMessageFor(model => model.Feedback, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="text-align: center">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn" name="submit" />
                    <style>
                        .btn[name="submit"] {
                            background-color: #d6972a;
                            color: black;
                            transition-duration: 0.4s;
                        }
                        .btn[name="submit"]:hover {
                                background-color: #f8bc54;
                        }
                    </style>
                </div>
            </div>
        </div>
    }

    <div class="form-group" style="text-align: center">
        <div class="col-md-offset-2 col-md-10">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn"})
            <style>
                .btn {
                    background-color: rgb(229 75 66 / 0.93);
                    color: black;
                    transition-duration: 0.4s;
                    }
                  .btn:hover  {
                        background-color: #fa5047;
                    }
            </style>
        </div>
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
}
