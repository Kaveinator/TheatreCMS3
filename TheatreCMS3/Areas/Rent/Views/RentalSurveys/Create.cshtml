@model TheatreCMS3.Areas.Rent.Models.RentalSurveys

@{
    ViewBag.Title = "Create";
}

<h2 id="survey-header">Create Rental Survey</h2>

<div class="survey-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="survey-form-group">
            @Html.LabelFor(model => model.RecommendRentalRating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10" id="survey-form">
                @Html.EditorFor(model => model.RecommendRentalRating, new { htmlAttributes = new { @class = "form-control", @placeholder = "Would you recommend us to a friend that needed to rent theatre equipment?",} })
                @Html.ValidationMessageFor(model => model.RecommendRentalRating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="survey-form-group">
            @Html.LabelFor(model => model.RentalCost, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RentalCost, new { htmlAttributes = new { @class = "form-control", @placeholder = "Please enter rental cost..." } })
                @Html.ValidationMessageFor(model => model.RentalCost, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="survey-form-group">
            @Html.LabelFor(model => model.ExperienceRating, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ExperienceRating, new { htmlAttributes = new { @class = "form-control", @placeholder = "How was your experience renting with us?" } })
                @Html.ValidationMessageFor(model => model.ExperienceRating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="survey-form-group">
            @Html.LabelFor(model => model.Feedback, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Feedback, new { htmlAttributes = new { @class = "form-control", @placeholder = "Please enter feedback..." } })
                @Html.ValidationMessageFor(model => model.Feedback, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10 text-center">
                <input type="submit" value="Create" id="survey-btn" />
            </div>
        </div>

        <div class="col-md-offset-2 col-md-10 text-center">
                @Html.ActionLink("Back to List", "Index", null, new { @class = "survey-back-btn " })
        </div>
    </div>
        }
    </div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
