@model TheatreCMS3.Areas.Rent.Models.RentalSurvey

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal rentalSurvey-FormBackground-Styling">
        <h4>Create Rental Survey</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div @*class="form-group" can use this or not use this, just need to input class breakdown here*@>
            
            @Html.LabelFor(model => model.ReccomendedRentingRating, "Reccomended Renting Rating", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ReccomendedRentingRating, new { htmlAttributes = new { @class = "form-control rentalSurvey-Form--InputStyling", placeholder = "Enter Renting Rating" } })
                @Html.ValidationMessageFor(model => model.ReccomendedRentingRating, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OverallExperienceRenting, "Overall Experience Renting", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OverallExperienceRenting, new { htmlAttributes = new { @class = "form-control rentalSurvey-Form--InputStyling", placeholder = "Enter Experience rating" } })
                @Html.ValidationMessageFor(model => model.OverallExperienceRenting, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.GeneralFeedback, "General Feedback", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GeneralFeedback, new { htmlAttributes = new { @class = "form-control rentalSurvey-Form--InputStyling", placeholder = "Enter Feedback" } })
                @Html.ValidationMessageFor(model => model.GeneralFeedback, "", new { @class = "text-danger " })
               </div>
        </div>

        @*<div class="rentalSurvey-Create--Styling">
            <div class="col-md-offset-2 col-md-10">*@
                <input type="submit" value="Create" class="btn btn-default rentalSurvey-Create--Styling" />
                 @Html.ActionLink("Back to List", "Index", "RentalSurveys", null, new { @class = "btn btn-default rentalSurvey-Create--Styling2" })


</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
