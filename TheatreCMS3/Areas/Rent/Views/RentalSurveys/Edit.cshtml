@model TheatreCMS3.Areas.Rent.Models.RentalSurveys

@{
    ViewBag.Title = "Edit";
}

<h2 class="text-center" id="survey-header">Edit Rental Survey</h2>

<div class="survey-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SurveyID)

            <div class="survey-form-group">
                @Html.LabelFor(model => model.RecommendRentalRating, htmlAttributes: new { @class = "control-label col" })
                <div class="col" id="survey-form">
                    @Html.EditorFor(model => model.RecommendRentalRating, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RecommendRentalRating, "", new { @class = "survey-text-danger" })
                </div>
            </div>

            <div class="survey-form-group">
                @Html.LabelFor(model => model.RentalCost, htmlAttributes: new { @class = "control-label col" })
                <div class="col" id="survey-form">
                    @Html.EditorFor(model => model.RentalCost, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RentalCost, "", new { @class = "survey-text-danger" })
                </div>
            </div>

            <div class="survey-form-group">
                @Html.LabelFor(model => model.ExperienceRating, htmlAttributes: new { @class = "control-label" })
                <div class="col">
                    @Html.EditorFor(model => model.ExperienceRating, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ExperienceRating, "", new { @class = "survey-text-danger" })
                </div>
            </div>

            <div class="survey-form-group">
                @Html.LabelFor(model => model.Feedback, htmlAttributes: new { @class = "control-label col" })
                <div class="col">
                    @Html.EditorFor(model => model.Feedback, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Feedback, "", new { @class = "survey-text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col text-center">
                    <input type="submit" value="Save" id="survey-btn" />
                </div>
            </div>
        </div>
    }

    <div class="col text-center">
        @Html.ActionLink("Back to List", "Index", null, new { @class = "survey-back-btn " })
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
