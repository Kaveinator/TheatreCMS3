@{
  ViewBag.Title = "Create";
}

<h2 class="text-center">Create Rental History</h2>


@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

  <div class="rental_history-create--container rounded pb-2 container-fluid mx-auto">
    <form>
      @Html.ValidationSummary(true, "", new { @class = "rental_history-create--vldmsg" })
      <div class="form-inline">
        <div class="col">
          @Html.LabelFor(model => model.Rental, htmlAttributes: new { @class = "control-label col-md-2 pb-1 pt-1" })
