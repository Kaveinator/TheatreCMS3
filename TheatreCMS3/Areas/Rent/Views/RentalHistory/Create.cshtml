        <div class="col mt-n2">
          @Html.LabelFor(model => model.RentalDamaged, "Damaged?", htmlAttributes: new { @class = "control-label col-md-2 pb-1" })
            @Html.CheckBoxFor(model => model.RentalDamaged, new { @id = "isDamaged" })
            @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "rental_history-create--vldmsg" })
        </div>
      </div>
      <div class="col pb-2">
        <label id="damages" class="cold-md-2 pt-2">Notes</label>
        @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "rental_history-create--vldmsg" })
      </div>
      <div class="form-inline">
        <div class="mx-auto">
          @Html.ActionLink("Back to List", "Index", null, new { @class = "btn rental_history-create--btn" })
          <input class="btn btn-success" type="submit" value="Create">
        </div>
      </div>
    </form>
  </div>
  
