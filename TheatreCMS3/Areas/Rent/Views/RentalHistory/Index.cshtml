@model IEnumerable<TheatreCMS3.Areas.Rent.Models.RentalHistory>

@{
    ViewBag.Title = "Index";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


<h2 class="rh-index-header">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table id="rh-index-table" class="table table-dark">
    <tr>
        <th>
          Most Recent Rental Histories
        </th>
    </tr>

@foreach (var item in Model) {
<tr>
  <td class="rh-index-checkbox">
    <i class="fas fa-check">@Html.DisplayFor(modelItem => item.RentalDamaged)</i>
  </td>
  <td class="badge badge-secondary" style="font-size:0.75rem;">
    @Html.DisplayFor(modelItem => item.Rental)
  </td>
  <td>
    @Html.DisplayFor(modelItem => item.DamagesIncurred)
  </td>


  
      <td>

          @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
          @Html.ActionLink("Details", "Details", new { id = item.Id }) |
          @Html.ActionLink("Delete", "Delete", new { id = item.Id })
      </td>
  


</tr>
}

</table>
