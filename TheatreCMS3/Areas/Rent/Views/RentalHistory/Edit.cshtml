@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
  ViewBag.Title = "Edit";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()

  <link rel="stylesheet" href="~/Content/Areas/Rent.css" type="text/css" />
  <script type="text/javascript" src="~/Scripts/Areas/Rent.js"></script>

  <h3 align="center">Edit Rental History</h3>

  <div class="rentalHistory-container">
    <div class="rentalHistory-Form">

      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
      <div class="form-row">
        <div class="form-group col-md-6">
          @Html.LabelFor(model => model.Rental, htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-12">
            @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
          </div>
        </div>
        <div class="form-group">
          @Html.LabelFor(model => model.RentalDamaged, "Damaged?", htmlAttributes: new { @class = "control-label col-md-2" })
          <div class="col-md-6">
            <div class="form-check" onclick="isDamaged()">
              @Html.EditorFor(model => model.RentalDamaged)
              @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div id="damagesIncurred">
          @Html.LabelFor(model => model.DamagesIncurred, "Notes", htmlAttributes: new { @class = "control-label col-md-6 rentalHistory-notes-label"})
        </div>
        <div class="col-md-12">
          @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
          @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
        </div>
      </div>

      <div class="form-row rentalHistory-Btn">
        <div class="form-group">
          <div class="col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-10">
            <input type="button" class="btn btn-secondary" value="Back to List" onclick="location.href='@Url.Action("Index", "RentalHistory")'" />
          </div>
        </div>
      </div>

    </div>
  </div>
}
