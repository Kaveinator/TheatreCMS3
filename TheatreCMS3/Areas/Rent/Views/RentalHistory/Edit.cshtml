@model TheatreCMS3.Areas.Rent.Models.RentalHistory

@{
  ViewBag.Title = "Edit";
}



@using (Html.BeginForm())
{
  @Html.AntiForgeryToken()
  <h2 style="text-align:center"> Edit Rental History</h2>
  <div class=" rounded form-horizontal" style="background: #f04d44; max-width: 600px; margin: auto">


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <div class="row justify-content-center">
      <div class="col-6 ">
        <div class="form-group">
          <h2 class="control-label col-md-2">Rental</h2>
          <div class="col-10">
            @Html.EditorFor(model => model.Rental, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Rental, "", new { @class = "text-danger" })
          </div>
        </div>
      </div>
    

      <div class="col-6 ">
        <div class="form-group">
          <h2 class="control-label col-md-2">Damaged?</h2>
          <div class="col-6">
            <div class="checkbox" id="stateCheck" onchange="checkLink()">
              @Html.EditorFor(model => model.RentalDamaged)
              @Html.ValidationMessageFor(model => model.RentalDamaged, "", new { @class = "text-danger" })
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12 m-auto">
        <div class="form-group">
          <h2 class="control-label col-md-2" id="Switch">Notes</h2>
          <div class="col-md-10">
            @Html.EditorFor(model => model.DamagesIncurred, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DamagesIncurred, "", new { @class = "text-danger" })
          </div>
        </div>
      </div>
    </div>

  <div class="row justify-content-center">
    <div class="col-4 ">
      <button onclick="~/rent/rentalhistory" class="btn btn-secondary">
        Back to List
      </button>
    </div>

    <div class="form-group">
      <div class="col-4 ml-0">
        <input type="submit" value="Save" class="btn btn-success" />

      </div>
    </div>
  </div>
  </div>

}

<script>
  var Counter = 0;
  function checkLink() {
    console.log("This hit")
    Counter += 1;
    console.log(Counter);
    if (Counter % 2 == 0) {
      document.getElementById("Switch").innerHTML = "Notes"
    }
    else {
      document.getElementById("Switch").innerHTML = "Damages"
    }
  }

</script>

