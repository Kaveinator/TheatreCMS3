@model TheatreCMS3.Areas.Rent.Models.RentalItem

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <script src="https://kit.fontawesome.com/634caf7d3f.js" crossorigin="anonymous"></script>
</head>

<div class="mt-5">
    <h2 class-="text-left">Delete this Rental Item?</h2>
    <div class="mt-2" style="width: 100%; height: 12px; background-color: var(--secondary-color)"</div>
</div>

<div class="container w-75">
    <div class="container-fluid cms-bg-main-light text-center rounded Rent-RentalItem--Index cms-text-dark mt-4">

        <div class="text-center">
            <h2 class="text-center" style="color: var(--light-color); ">@Html.DisplayFor(model => model.Item)</h2>
        </div>

        <div class="text-center">
            <div>
                @{
                    if (Model.ItemPhoto == null)
                    {
                        <p>No Photo</p>
                    }
                    else
                    {
                        <img src="@Url.Action("DisplayImage","RentalItems", new { Model.RentalItemId })" class="mb-3 mt-2 Rent-RentalItem--Photo" />
                    }
                }
            </div>
        </div>
        <p class="text-left h2 row ml-3">Item Description</p>
        <div class=" cms-bg-light rounded Rent-RentalItem--Index mb-2 ml-3 mr-3 justify-content-center" style="border: 3px solid var(--dark-color); font-size: 18px;">
            <p>@Html.DisplayFor(model => model.ItemDescription)</p>
        </div>

        <div class=" cms-bg-light rounded Rent-RentalItem--Index m-3" style="border: 3px solid var(--dark-color); font-size: 18px;">
            <div class="form-horizontal">
                <div class="form-group row">
                    @Html.LabelFor(model => model.PickupDate, "Pick up Date", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col text-center">
                        @Html.DisplayFor(model => model.PickupDate, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.ReturnDate, "Return Date", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col tex-center">
                        @Html.DisplayFor(model => model.ReturnDate, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-between">
            <div>
                <button class="Rent-RentalItem--deleteBtn text-center mt-3" type="button" onclick="location.href='@Url.Action("Index")'">
                    <i class="fa-solid fa-backward"></i> Back to List
                </button>
                <button class="Rent-RentalItem--createBtn text-center mt-3" type="button" onclick="location.href='@Url.Action("Edit", "RentalItems", new {id = Model.RentalItemId })'">
                    <i class="fa-solid fa-pen-to-square"></i> Edit
                </button>
            </div>
            <div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <button class="Rent-RentalItem--deleteBtn text-center mt-2" type="submit" value="Delete" onclick="@Url.Action("DeleteConfirmed", "RentalItems", new { id = Model.RentalItemId })"><i class="fa-solid fa-trash"></i> Delete</button>
                }
            </div>
        </div>
    </div>
</div>