@model IEnumerable<TheatreCMS3.Areas.Rent.Models.RentalItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="https://kit.fontawesome.com/634caf7d3f.js" crossorigin="anonymous"></script>
</head>

<div class="mt-5">
    <h2 class-="text-left">Rental Items</h2>
    <div class="mt-2" style="width: 100%; height: 12px; background-color: var(--secondary-color)"</div>
</div>

<div class="Rent-RentalItem--Index cms-bg-dark text-center rounded row">
    @foreach (var item in Model)
    {
        <div class="col-3 mt-3">
            <div class="Rent-RentalItem--IndexContainer card">
                <div class="Rent-RentalItem--ImgHover text-center">
                    <button class="Rent-RentalItem--createBtn text-center mt-2" type="button" onclick="location.href='@Url.Action("Edit", "RentalItems", new {id = item.RentalItemId })'">
                        <i class="fa-solid fa-pen-to-square"></i> Edit
                    </button>
                    <button class="Rent-RentalItem--deleteBtn text-center mt-2" type="button" onclick="location.href='@Url.Action("Delete", "RentalItems", new {id = item.RentalItemId })'">
                        <i class="fa-solid fa-trash"></i> Delete
                    </button>
                </div>
                <a href="@Url.Action("Details", "RentalItems", new { id = item.RentalItemId })">
                    <article class="">
                        <h2>@Html.DisplayFor(modelItem => item.Item)</h2>
                    </article>
                    <img src="@Url.Action("DisplayImage", "RentalItems", new { item.RentalItemId })" class="" alt="Rental Item Photo">
                </a>
            </div>
        </div>
    }
</div>

<div class="d-flex justify-content-center mt-4">
    <input type="submit" value="Create New" class="Rent-RentalItem--createNewBtn w-50" onclick="location.href='@Url.Action("Create")'" />
</div>



