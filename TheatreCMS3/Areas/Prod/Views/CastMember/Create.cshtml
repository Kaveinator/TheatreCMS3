@model TheatreCMS3.Areas.Prod.Models.CastMember

@{
    ViewBag.Title = "Create a Cast Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="CastMember-Create--h2">Create a Cast Member</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="CastMember-Create--center">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <div class="col-md-10 mx-auto">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control CastMember-Create--inputfield", @placeholder = "Name" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 mx-auto">
            @Html.EditorFor(model => model.YearJoined, new { htmlAttributes = new { @class = "form-control CastMember-Create--inputfield", @placeholder = "Year Joined" } })
            @Html.ValidationMessageFor(model => model.YearJoined, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-md-10 mx-auto">
            @Html.EnumDropDownListFor(model => model.MainRole, htmlAttributes: new { @class = "form-control CastMember-Create--inputfield" })
            @Html.ValidationMessageFor(model => model.MainRole, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 mx-auto">
            @Html.EditorFor(model => model.Bio, new { htmlAttributes = new { @class = "form-control CastMember-Create--inputfield", @placeholder = "Biography" } })
            @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CurrentMember, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10 mx-auto">
            <div class="checkbox CastMember-Create--currentmember">
                @Html.EditorFor(model => model.CurrentMember, new { htmlAttributes = new { @class= "CastMember-Create--inputfield" } })
                @Html.ValidationMessageFor(model => model.CurrentMember, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 mx-auto">
            @Html.EditorFor(model => model.Character, new { htmlAttributes = new { @class = "form-control CastMember-Create--inputfield", @placeholder = "Character" } })
            @Html.ValidationMessageFor(model => model.Character, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 mx-auto">
            @Html.EditorFor(model => model.CastYearLeft, new { htmlAttributes = new { @class = "form-control CastMember-Create--inputfield", @placeholder = "Year Left Cast" } })
            @Html.ValidationMessageFor(model => model.CastYearLeft, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 mx-auto">
            @Html.EditorFor(model => model.DebutYear, new { htmlAttributes = new { @class = "form-control CastMember-Create--inputfield", @placeholder = "Year Debuted" } })
            @Html.ValidationMessageFor(model => model.DebutYear, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mx-auto">
            <input type="submit" value="Create" class="btn btn-block btn-default CastMember-Create--submitbutton" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mx-auto">
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn-block CastMember-Create--backbutton" } )
        </div>
    </div>

</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
