@model TheatreCMS3.Areas.Prod.Models.ProductionPhoto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "ProductionPhotoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal productionphoto-createedit--form-container">
        <div class="productionphoto-createedit--textPadding">
            <h2>Create Production Photo</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div id="productionphoto-createedit--leftSide">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-offset-2" })
                        <div class="col-md-offset-2">
                            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { placeholder = "Enter Title Here", @class = "form-control", @style = "border-color: var(--main-color); box-shadow: none;" } })
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-offset-2" })
                        <div class="col-md-offset-2">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { placeholder = "Enter Title Here", @class = "form-control", @style = "border-color: var(--main-color); box-shadow: none;" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div id="productionphoto-createedit--rightSide">
                    <div class="form-group" style="padding-bottom: 8px;">
                        @Html.LabelFor(model => model.PhotoFile, htmlAttributes: new { @class = "control-label col-md-offset-2" })
                        <div class="col-md-offset-2">
                            <input type="file" name="fileChoice" required />
                            @Html.DisplayFor(model => model.PhotoFile, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div  class="form-group">
                        @Html.LabelFor(model => model.Production, htmlAttributes: new { @class = "control-label col-md-offset-2" })
                        <div class="col-md-offset-2">
                            @Html.EditorFor(model => model.Production, new { htmlAttributes = new { placeholder = "Enter Title Here", @class = "form-control", @style = "border-color: var(--main-color); box-shadow: none;" } })
                            @Html.ValidationMessageFor(model => model.Production, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
            

            <div class="form-group">
                <div class="col-md-offset-2">
                    @Html.ActionLink("Back to List", "Index", new { id = 1 }, new { @class = "btn btn-secondary" } )
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
