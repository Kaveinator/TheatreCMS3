@model IEnumerable<TheatreCMS3.Areas.Prod.Models.ProductionPhoto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoFile)
        </th>
        <th>
            <p>Options</p>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="data:image;base64,@System.Convert.ToBase64String(item.PhotoFile)" alt="Production Image" style="max-height:100px; padding: 15px;" class="rounded" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProductionPhotoId }) |
                @Html.ActionLink("Details", "Details", new { id = item.ProductionPhotoId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ProductionPhotoId })
            </td>
        </tr>
    }

</table>


