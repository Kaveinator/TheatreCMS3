@model TheatreCMS3.Areas.Prod.Models.CalendarEvents

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Areas/Prod.css" rel="stylesheet" />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="CalendarEvent-CreateEdit--background">
        <div class="form-horizontal">
            <h4 class="CalendarEvent-CreateEdit--header">Create Calendar Event</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">

                @Html.LabelFor(model => model.StartDate, "Start Date", htmlAttributes: new { @class = "control-label col-md-6 Prod-All-label CalendarEvent-CreateEdit--label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control Prod-All-form", placeholder = "Enter the start day as YYYY - MM - DD" } })

                    @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.EndDate, "End Date", htmlAttributes: new { @class = "control-label col-md-6 Prod-All-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control Prod-All-form", placeholder = "Enter the end day as YYYY-MM-DD" } })
                    @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StartTime, "Start Time", htmlAttributes: new { @class = "control-label col-md-6 Prod-All-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control Prod-All-form", placeholder = "Enter a start time and include hours and minutes!" } })
                    @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StartTime, "End Time", htmlAttributes: new { @class = "control-label col-md-6 Prod-All-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control Prod-All-form", placeholder = "Enter an end time and include hours and minutes!" } })
                    @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TicketsAvailable, "Tickets Available", htmlAttributes: new { @class = "control-label col-md-6 Prod-All-label" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TicketsAvailable, new { htmlAttributes = new { @class = "form-control Prod-All-form", placeholder = "Available Tickets" } })
                    @Html.ValidationMessageFor(model => model.TicketsAvailable, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.IsProduction, "In Production?", htmlAttributes: new { @class = "control-label col-md-6 Prod-All-label" })
                <div class="col-md-12">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.IsProduction)
                        @Html.ValidationMessageFor(model => model.IsProduction, "", new { @class = "text-white bg-dark" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AllDay, "All Day?", htmlAttributes: new { @class = "control-label col-md-6 Prod-All-label" })
                <div class="col-md-12">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.AllDay)
                        @Html.ValidationMessageFor(model => model.AllDay, "", new { @class = "text-white bg-dark" })
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-offset-2 col-md-12 text-center">
                    <input type="submit" value="Create" class="Prod-All-MainBtn btn-default" />
                </div>
                <div class="col-md-offset-2 col-md-12 Production-Create-ButtonSpace text-center">
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "Prod-All-SecondaryBtn btn btn-default" })
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
 