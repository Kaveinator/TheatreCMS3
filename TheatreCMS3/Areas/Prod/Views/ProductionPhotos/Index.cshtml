@model IEnumerable<TheatreCMS3.Areas.Prod.Models.ProductionPhoto>

@{
    ViewBag.Title = "Production Photos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Production Photos</h2>

<p>
    <a href="@Url.Action("Upload")" class="btn btn-secondary">Upload New Photo</a>
</p>

@if (Model.Count() == 0)
{
    <p>There are currently no Production Photos</p>
}
else
{
    <table class="table table-dark table-striped">
        <thead class="">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Photo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var photo in Model)
            {
                <tr>
                    <td>@photo.Title</td>
                    <td>@photo.Description</td>
                    <td>Image coming soon</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = photo.ProPhotoId })" class="btn btn-secondary"><i class="fas fa-edit"></i> Edit</a> 
                        <a href="@Url.Action("Details", new { id = photo.ProPhotoId })" class="btn btn-secondary"><i class="fas fa-info"></i> Details</a>
                        <a href="@Url.Action("Delete", new { id = photo.ProPhotoId })" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}