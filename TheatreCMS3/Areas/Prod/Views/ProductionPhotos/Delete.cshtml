@model TheatreCMS3.Areas.Prod.Models.ProductionPhoto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="d-flex productionphotos-Details-background justify-content-center">
    
    <div class="flex-column m-2">
        <div>
            <h4>@Html.DisplayNameFor(model => model.Title)</h4>
        </div>

        <div class="mb-3">
            @Html.DisplayFor(model => model.Title)
        </div>

        <div>
            <h4>@Html.DisplayNameFor(model => model.Description)</h4>
        </div>

        <div class="mb-3">
            @Html.DisplayFor(model => model.Description)
        </div>
        <div class="d-flex justify-content-center">
            <img src="/ProductionPhotos/RetrieveImage/@Model.ProductionPhotodId" alt="" />
        </div>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <input type="button" class="btn btn-dark m-3" value="Back to list" onclick="location.href='@Url.Action("Index","ProductionPhotos")'" />
            </div>
        }
    </div>
</div>
