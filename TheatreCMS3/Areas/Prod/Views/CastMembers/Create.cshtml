@model TheatreCMS3.Areas.Prod.Models.CastMember

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="CastMember-Create--Title">Create Cast Member</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4 class="CastMember-Create--Title">Please enter all your information below:</h4>
        <hr />
       <div class="no-gutters CastMember-Create--Form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" id="create-form">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 CastMember-Create--LabelName" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control CastMember-Create--Input", @placeholder = "Enter your first and last name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="CastMember-Create--Form">
            @Html.LabelFor(model => model.YearJoined, htmlAttributes: new { @class = "control-label col-md-2 CastMember-Create--LabelName" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.YearJoined, new { htmlAttributes = new { @class = "form-control  CastMember-Create--Input", @placeholder = "Enter the year that you joined" } })
                @Html.ValidationMessageFor(model => model.YearJoined, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="CastMember-Create--Form">
            @Html.LabelFor(model => model.MainRole, htmlAttributes: new { @class = "control-label col-md-2 CastMember-Create--LabelName" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.MainRole, htmlAttributes: new { @class = "form-control CastMember-Create--Input CastMember-Create--MainRole", @placeholder = "Please choose your role" })
                @Html.ValidationMessageFor(model => model.MainRole, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="CastMember-Create--Form">
            @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label col-md-2 CastMember-Create--LabelName" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Bio, new { htmlAttributes = new { @class = "form-control CastMember-Create--Input", @placeholder = "Please add a little info about yourself (optional)" } })
                @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="CastMember-Create--Form">
            @Html.LabelFor(model => model.CurrentMember, htmlAttributes: new { @class = "control-label col-md-2 CastMember-Create--LabelName" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CurrentMember)
                    @Html.ValidationMessageFor(model => model.CurrentMember, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group" id="CastMember-Create--Form">
            @Html.LabelFor(model => model.Character, htmlAttributes: new { @class = "control-label col-md-2 CastMember-Create--LabelName" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Character, new { htmlAttributes = new { @class = "form-control CastMember-Create--Input", @placeholder = "Enter your character's name" } })
                @Html.ValidationMessageFor(model => model.Character, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="CastMember-Create--Form">
            @Html.LabelFor(model => model.CastYearLeft, htmlAttributes: new { @class = "control-label col-md-2 CastMember-Create--LabelName" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CastYearLeft, new { htmlAttributes = new { @class = "form-control CastMember-Create--Input", @placeholder = "Enter the year that you have left the cast" } })
                @Html.ValidationMessageFor(model => model.CastYearLeft, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="CastMember-Create--Form">
            @Html.LabelFor(model => model.DebutYear, htmlAttributes: new { @class = "control-label col-md-2 CastMember-Create--LabelName" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DebutYear, new { htmlAttributes = new { @class = "form-control CastMember-Create--Input", @placeholder = "Enter your debut year" } })
                @Html.ValidationMessageFor(model => model.DebutYear, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-10">
                <input type="submit" value="Create" class="btn CastMember-Create--CreateButton d-grid gap-2 d-md-block" />
                <div>
                    @Html.ActionLink("Back To List", "Index", null, new { @class = "btn CastMember-Create--BackToListBtn d-grid gap-2 d-md-block" })
                </div>
            </div>
        </div>
       </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
