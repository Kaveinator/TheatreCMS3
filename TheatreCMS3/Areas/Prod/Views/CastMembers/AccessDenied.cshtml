
@{
    ViewBag.Title = "AccessDenied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mx-auto">
    <h1 class="pt-5 text-center">You are not authorized to visit that page.</h1>                     
    <img src="~/Content/images/restricted.png" alt="Not authorized" class="img-fluid mx-auto d-block">
    <div class="text-center">
        <h5>
            @Html.ActionLink("Log in", "Login", "Account", new { area = "" }, new { @class = "" })
        </h5>
    </div>

</div>

