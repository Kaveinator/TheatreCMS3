@model IEnumerable<TheatreCMS3.Areas.Prod.Models.CastMember>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="text-center">
    <button onclick="location.href = '@Url.Action("Create")'" class="castmembers-Create--listBtn">Add New Cast Member</button>
</div>

<h1>Wicked</h1>
<div class="mb-3" style="width: 100%; height: 5px; background-color: #DB1A11;"></div>

<div class="card-group">
    @foreach (var item in Model.Where(y => y.ProductionTitle == TheatreCMS3.Areas.Prod.Models.ProductionEnum.Wicked))
    {
        <div class="col-sm-4">
            <div class="card border-light bg-transparent mb-3">
                <div class="card-header bg-transparent border-light text-center"><h4 class="cms-text-secondary">@Html.DisplayFor(modelItem => item.Name) <br /></h4><h5>Playing: @Html.DisplayFor(modelItem => item.Character)</h5></div>
                <div class="card-body text-center">
                    <a href="@Url.Action("Details", new { id = item.CastMemberId })">
                        <img class="card-img-bottom" src="data:image;base64, @Convert.ToBase64String(item.Photo)" />
                    </a>
                    <button onclick="location.href = '@Url.Action("Edit", new { id = item.CastMemberId })'" class="castmembers-Index--CardBtn">Edit</button>
                    <button onclick="location.href = '@Url.Action("Delete", new { id = item.CastMemberId })'" class="castmembers-Index--CardBtn">Delete</button>
                    <button onclick="location.href = '@Url.Action("Details", new { id = item.CastMemberId })'" class="castmembers-Index--CardBtn">Details</button>
                </div>

            </div>

        </div>
    }
</div>

