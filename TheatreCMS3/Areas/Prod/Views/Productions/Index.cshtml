@model IEnumerable<TheatreCMS3.Areas.Prod.Models.Production>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Productions</h2>

<div>
  <button type="button" class="Production-Index--CreateNew btn btn-default" onclick="location.href='@Url.Action("Create")'">Create New</button>
</div>
  <div class="Production-Index--CardContainer">
    <div class="card-deck Production-Index--CardColumns">
      @foreach (var item in Model)
      {
        <div class="card text-center bg-transparent" style="width: 18rem;">
                                                                             <!-- This link below is just a placeholder that pulls an image from a current production that Theater Vertigo is currently showing.  Link to be replaced in future site development -->
            <img src="https://theatrevertigo.org/wp-content/uploads/2021/11/theattre-vertigo-landscape-225x300.png" class="card-img-top" style="width: 100%;" alt=@Html.DisplayFor(modelItem => item.Title)>
            
            <div class="Production-Index--cardBadge Prodution-Index--BadgeOverlay">
              @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "badge badge-pill" })
              @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "badge badge-pill" })
              @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "stretched-link" })
            </div>
          <div class="card-footer text-center">
            <h5 class="card-title text-white">@Html.DisplayFor(modelItem => item.Title)</h5>
          </div>
         </div>
      }
    </div>

  

</div>