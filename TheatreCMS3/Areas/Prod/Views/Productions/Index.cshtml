@model IEnumerable<TheatreCMS3.Areas.Prod.Models.Production>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mt-5">Productions</h2>

@Html.ActionLink("Create New", "Create", "Productions", new { @class = "btn productions--bg-secondary" })

<hr class="productions--bg-light"/>

<div class="container row row-cols-5 justify-content-center">
    @foreach (var item in Model)
    {
        <div class="card productions--bg-secondary-dark productions--card m-3">
            <img class="card-img-top" src="~/Content/images/ProductionPhotos/@item.Title/01.jpg" alt="" height="200" onerror="this.src='../../Content/images/ProductionPhotos/Filler/01.jpg'">
            <div class="card-body text-center">
                <h5 class="card-title">@item.Title</h5>
            </div>
        </div>
    }
</div>

