@model IEnumerable<TheatreCMS3.Areas.Blog.Models.BlogPost>

@{
  ViewBag.Title = "Index";
}

<h1 class="blogpost-h1">Index</h1>
<p class="centered">
  @Html.ActionLink("Create New", "Create")
</p>
@foreach (var item in Model)
{
 
  <div class="container mt-5">
    <div class="card">
      <div class="row">
        <div class="col-md-6">
        <img class="img-fluid" src="~/Content/images/BlogPostRobot.jpg" alt="Placeholder Image">
        </div>
        <div class="col-md-6">         
            <p class="text-left font-weight-bold mt-4">@Html.DisplayFor(modelItem => item.Author)<br /><small class="text-muted">@Html.DisplayFor(modelItem => item.Posted)</small></p>
            <h4 class="text-left font-weight-bold">@Html.DisplayFor(modelItem => item.Title)</h4>
            <p class="text-left truncatetxt">@Html.DisplayFor(modelItem => item.Content)</p>
              <div class="btn-on-bottom">
                @Html.ActionLink("Edit", "Edit", new { id = item.BlogPostId }, new { @class = " btn btn-secondary fas fa-edit" })
                @Html.ActionLink("Details", "Details", new { id = item.BlogPostId }, new { @class = "btn btn-secondary fas fa-info-circle" })
                @Html.ActionLink("Delete", "Delete", new { id = item.BlogPostId }, new { @class = "mx-4 btn btn-danger fas fa-trash" })
              </div>
        </div>
      </div>
    </div>
  </div>
 
}
