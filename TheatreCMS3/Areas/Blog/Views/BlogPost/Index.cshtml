@model IEnumerable<TheatreCMS3.Areas.Blog.Models.BlogPost>

@{
  ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
  @Html.ActionLink("Create New", "Create")
</p>

@foreach (var item in Model)
{
<div class="container col-8">
  <div class="row">
    <div class="col-6 p-0">
      <img width="370" height="310" src="~/Content/images/BlogPostRobot.jpg" alt="Placeholder Image">
    </div>
    <div class="col blogpost-index-bckclr text-break">
      <br />
      <p class="text-left font-weight-bold">@Html.DisplayFor(modelItem => item.Author)<br /><small class="text-muted">@Html.DisplayFor(modelItem => item.Posted)</small></p>
      <h5 class="text-left font-weight-bold">@Html.DisplayFor(modelItem => item.Title)</h5>
      <p class="text-left truncatetxt">@Html.DisplayFor(modelItem => item.Content)</p>      
      @Html.ActionLink("Edit", "Edit", new { id = item.BlogPostId }, new { @class = "btn btn-secondary fas fa-edit" })
      @Html.ActionLink("Details", "Details", new { id = item.BlogPostId }, new { @class = "btn btn-secondary fas fa-info-circle" })
      @Html.ActionLink("Delete", "Delete", new { id = item.BlogPostId }, new { @class = "mx-4 btn btn-danger fas fa-trash" })    
    </div>
  </div>
</div>
<br />
}