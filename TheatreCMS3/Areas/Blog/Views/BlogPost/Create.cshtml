@model TheatreCMS3.Areas.Blog.Models.BlogPost

@{
    ViewBag.Title = "Create";
}


<h2>Create Blog Post</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal blogpost-createedit--form">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group blogpost-createedit--formgroup">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2 blogpost-createedit--formlabel" })
            <div>
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control blogpost-createedit--formeditor", @placeholder = "Enter your blog title" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group blogpost-createedit--formgroup">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2 blogpost-createedit--formlabel" })
            <div>
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control blogpost-createedit--formeditor", @placeholder = "Enter your blog content" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group blogpost-createedit--formgroup">
            @Html.LabelFor(model => model.Posted, htmlAttributes: new { @class = "control-label col-md-2 blogpost-createedit--formlabel" })
            <div>
                @Html.EditorFor(model => model.Posted, new { htmlAttributes = new { @class = "form-control blogpost-createedit--formeditor", @placeholder = "Enter your date and time (MM/DD/YYYY hh:mm:ss) for this post" } })
                @Html.ValidationMessageFor(model => model.Posted, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group blogpost-createedit--formgroup">
            @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label col-md-2 blogpost-createedit--formlabel" })
            <div>
                @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control blogpost-createedit--formeditor", @placeholder = "Enter your (author) name" } })
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group blogpost-createedit--formgroup">
            <div>
                <input type="submit" value="CREATE BLOG POST" class="form-control btn blogpost-createedit--button01" />
            </div>
        </div>

        <div class="form-group blogpost-createedit--formgroup">
            <div>
                @Html.ActionLink("BACK TO LIST", "Index", null, new { @class="form-control btn blogpost-createedit--button02"})
            </div>
        </div>
        
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
