@model TheatreCMS3.Areas.Blog.Models.BlogAuthor
@Styles.Render("~/Content/Areas/Blog.css")
@Scripts.Render("~/Scripts/Areas/Blog.js")
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />


<div class="mb-5 animate__animated  animate__zoomIn" id="blogAuthorContainer@(Model.BlogAuthorId)">
  <div class="d-flex justify-content-center mx-auto" style="margin-bottom: -4px;">
    <div class="p-1 pl-2 py-2 bg-light rounded-left">
      <input type="button" id="blogBio@(Model.BlogAuthorId)" onclick="getBlogBio(@Model.BlogAuthorId)" value="Author Details" class="btn-responsive btn btn-dark" />
    </div>
    <div class="p-1 py-2 bg-light rounded-right">
      <input type="button" id="blogPost@(Model.BlogAuthorId)" onclick="getBlogPost(@Model.BlogAuthorId)" value="Blog Posts" class="btn-responsive btn btn-dark" />
    </div>
  </div>
  <div class="row dl-horizontal bg-light rounded text-dark">
    <div class="col-md-auto">
      <img src="https://www.fillmurray.com/g/200/300" alt="Sample Photo" class="blogAuthorImg my-4" />
    </div>
    <div class="col-md-7 pt-3 text-wrap">
      <div class="row d-flex justify-content-between">
        <div class="col-md-auto">
          <h1>@Html.DisplayFor(model => model.Name)</h1>
        </div>
        <div class="col-md-auto">
          <a href="https://www.facebook.com/"> <i class="fab fa-facebook fa-2x"></i></a> <a href="https://www.instagram.com/"><i class="fab fa-instagram fa-2x cms-text-dark"></i></a>
        </div>
      </div>
      <div class="row-cols-md-auto" style="overflow: hidden; height: 280px">
        <p id="displayText@(Model.BlogAuthorId)">@Html.DisplayFor(model => model.Bio)</p>
      </div>
      <div class="row">
        <div class="col-md-auto">
          <h6><strong>Joined Date</strong></h6>
          <p class="">@Html.DisplayFor(model => model.Joined)</p>
        </div>
        <div class="col-md-auto mr-auto">
          <h6><strong>Left Date</strong></h6>
          <p class="">@Html.DisplayFor(model => model.Left)</p>
        </div>
        <div class="col-auto">
          <div class="">
            <button type="button" onclick="@("window.location.href='" + @Url.Action("Edit", "BlogAuthors", new { id = Model.BlogAuthorId }) + "'");" class="btn btn-success m-1">
              <i class="fas fa-edit"></i> Edit
            </button>
            <button type="button" onclick="" class="btn btn-danger m-1" data-toggle="modal" data-target="#BlogAuthorDeleteModal" id="cardDelete(@Model.BlogAuthorId)">
              <i class="fas fa-trash-alt"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="BlogAuthorDeleteModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="BlogAuthorModalTitle">Confirm</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure that you would like to delete this BlogAuthor?
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-danger" id="DeleteAuthor" onclick="DeleteAuthors(@Model.BlogAuthorId)">Confirm</button>
        <button data-dismiss="modal" type="button" class="btn btn-warning">Cancel</button>
      </div>
    </div>
  </div>
</div>

<!-- Hidden URL action for JS reference -->
@Html.Hidden("deleteUrl", Url.Action("Delete"))