@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="BlogPhoto-delete-container">

<h2 class="BlogPhoto-delete-header">Delete BlogPhoto</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>BlogPhoto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Photo)
        </dd>

    </dl>

    <dd>
        @if (Model.Photo != null && Model.Photo.Length > 0)
        {
            var imageBase64 = Convert.ToBase64String(Model.Photo);
            var imageUrl = string.Format("data:image/jpeg;base64,{0}", imageBase64);
            <img src="@imageUrl" alt="@Model.Title" class="BlogPhoto-delete-preview" />
        }
        else
        {
            <p>No photo available.</p>
        }
    </dd>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="BlogPhoto-delete-submit" /> |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "BlogPhoto-delete-backtolist" })
        </div>
    }
</div>
