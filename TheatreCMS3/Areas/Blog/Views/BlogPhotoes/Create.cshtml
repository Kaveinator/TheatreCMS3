@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
   
    <div class="form-horizontal">
        <h2>Create Blog Photo</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div>
            <div class="centered">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control label-BGColor label-CreateEdit", placeholder = "West Coast Sunset" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="centered">
                @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "" })
                <div>
                    @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "" } })
                    <div>
                        <div>
                            <input type="file" id="file" name="file" onchange="readURL(this);" class="form-control label-BGColor label-CreateEdit"/>
                        </div>
                        <div class="image-area"><img id="imageResult" src="#" alt="" class="img-fluid rounded shadow-sm mx-auto d-block"></div>
                    </div>
                    @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="centered">
                <div class="btn-SideBySide">
                    <input type="button" id="upload" onclick="document.getElementById('file').click();" value="Choose file" class="BlogPhotoes-CreateEdit-SubmitBackList btn"/>
                    <input type="submit" value="Create" class="BlogPhotoes-CreateEdit-SubmitBackList  btn" />
                    @Html.ActionLink("Back to List", "Index", new { }, new { @class = "BlogPhotoes-CreateEdit-SubmitBackList btn" })
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
