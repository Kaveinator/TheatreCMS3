@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "BlogPhotoes", FormMethod.Post, new { enctype = "multipart/form-data" } ))
{
    @Html.AntiForgeryToken()

    <div class="BlogPhotoes-Create--form-horizontal">
        <h4 class="BlogPhotoes-Create--h4">Create Blog Photo</h4>
 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control BlogPhotoes-Create--createForm1", @placeholder = "Enter Title Here" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12">
                @Html.TextBoxFor(model => model.Photo, new { @class = "", @type="file", @Name="imageIn" })
                @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <center><input type="submit" value="Create Account" class="btn btn-default BlogPhotoes-Create--submitThis" /></center>
            </div>
        </div>
    </div>
}

<center>
    <div>
        @Html.ActionLink("Back to List", "Index", "BlogPhotoes", null, new { @class = "btn BlogPhotoes-Create--backToList" })
    </div>
</center>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
