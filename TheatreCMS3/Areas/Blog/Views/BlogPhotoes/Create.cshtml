@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="blogphoto-create--form">
    <div class="blogphoto-create--only">
        <h4>Create Blog Photo</h4>
    </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="blogphoto-create--boxcenter">
        <div class="blogphoto-create--changecolor">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })

            <div class="col-md-10 blogphoto-create--colorchange">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control blogphoto-create--insidetitle", placeholder = "Enter Your Title" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Photo, new { @class = "", type = "file" })
            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <div class="blogphoto-create--twobuttons">
            <div class="blogphoto-create--submit">
                <div class="col-md-10">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
                <div class="blogphoto-create--backtolist">
                    @Html.ActionLink("backtolist", "Index", "Blogphotoes", new { @class = "btn btn-primary" })
                </div>
            </div>

        </div>
    </div>
</div>
}


