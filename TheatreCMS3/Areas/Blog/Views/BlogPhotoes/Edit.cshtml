@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="blogphoto-edit--form">
    <div class="blogphoto-edit--only">
        <h4>Edit Blog Photo</h4>
    </div>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="blogphoto-edit--boxcenter">
    @Html.HiddenFor(model => model.BlogPhotoId)
    <div class="blogphoto-edit--changecolor">
        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10 blogphoto-edit--colorchange">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control blogphoto-edit--insidetitle", placeholder = "Enter Your Title" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>
        </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Photo, new { @class = "", type = "file" })
            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div>
        <div class="blogphoto-edit--twobuttons">
            <div class="blogphoto-edit--submit">
                <div class="col-md-10">
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
                <div class="blogphoto-edit--backtolist">
                    @Html.ActionLink("backtolist", "Index", "Blogphotoes", new { @class = "btn btn-primary" })
                </div>
            </div>

        </div>
    </div>
</div>
}