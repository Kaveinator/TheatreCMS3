@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Edit";
}

<h2 class="BlogPhoto-Edit--Header">Edit BlogPhoto</h2>


@using (Html.BeginForm("Edit", "BlogPhotoes", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
  <hr />
  <div class="BlogPhoto-Edit--Form">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.BlogPhotoID)

    <div class="form-group">
      @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
      <div class="col-md-auto">
        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control BlogPhoto-Edit--Form_Input" } })
        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-auto">
        <input type="file" name="photo" id="inputFile"/><br />
        <img class="BlogPhoto-Edit--Input_Img"src="data:image;base64,@System.Convert.ToBase64String(Model.Photo)" />
      </div>
    </div>

    <div class="form-group">
      <div class="col-md-auto">
        <input type="submit" value="Save" class="btn btn-whatever btn-md btn-block BlogPhoto-Edit--Button_1" />
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-whatever btn-md btn-block BlogPhoto-Edit--Button_2" })
      </div>
    </div>

    
  </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
