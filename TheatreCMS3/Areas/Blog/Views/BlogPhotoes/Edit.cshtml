@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <!-- Add container class here -->
    <h2>Edit Blog Photo</h2>


    @using (Html.BeginForm("Edit", "BlogPhotoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>BlogPhoto</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BlogPhotoId)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Image File", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <input type="file" name="imageFile" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    @if (Model.Photo != null && Model.Photo.Length > 0)
    {
        <div class="form-group">
            <label class="control-label col-md-2">Current Photo</label>
            <div class="col-md-10">
                <img src="@Url.Action("GetImage", "BlogPhotoes", new { id = Model.BlogPhotoId })" alt="@Model.Title" width="100" height="100" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>