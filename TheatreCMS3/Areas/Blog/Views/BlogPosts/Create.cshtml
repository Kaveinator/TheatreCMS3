@model TheatreCMS3.Areas.Blog.Models.BlogPost

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Create Blog Post</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal blogPost-Create--formContainer">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        
        @*Title*@
        <div class="form-group blogPost-Create--formGroup">
            @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control blogPost-Create--formInput", placeholder = "Enter the title" } })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Content*@
        <div class="form-group">
            @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control blogPost-Create--formInput", placeholder = "Enter the content" } })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Posted*@
        <div class="form-group">
            @Html.LabelFor(model => model.Posted, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Posted, new { htmlAttributes = new { @class = "form-control blogPost-Create--formInput", placeholder = "Enter a date" } })
                @Html.ValidationMessageFor(model => model.Posted, "", new { @class = "text-danger" })
            </div>
        </div>

        @*Author*@
        <div class="form-group">
            @Html.LabelFor(model => model.Author, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Author, new { htmlAttributes = new { @class = "form-control blogPost-Create--formInput", placeholder = "Enter the author's name" } })
                @Html.ValidationMessageFor(model => model.Author, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group ">
            <div class="text-center col-md-offset-2 col-md-10 blogPost-Create--buttonsContainer">
                <button type="button" class="btn btn-default blogPost-Create--backToList_button">@Html.ActionLink("Back to List", "Index")</button>
                <input type="submit" value="Create" class="btn btn-default blogPost-Create--create_button" />


            </div>
        </div>
    </div>
}

<div>
    
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
