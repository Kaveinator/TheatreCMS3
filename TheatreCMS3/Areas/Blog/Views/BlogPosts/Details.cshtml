@model TheatreCMS3.Areas.Blog.Models.BlogPost

@{
    ViewBag.Title = "Details";
}

<h2><b><u>Blog Post Details</u></b></h2>

<div class="container-fluid justify-content-center cms-bg-main">
    <hr />
    <div class="form-group justify-content-center cms-bg-light">
        <div class="form-group blog-author text-center blog-div-outline">
            <p class="blog-title"><b><u>@Html.DisplayFor(model => model.Title)</u></b></p>
        </div>
        <div class="form-group blog-content text-center blog-div-outline">
            <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fmountaintopmedium.com%2Fwp-content%2Fuploads%2Fwoocommerce-placeholder-500x500.png&f=1&nofb=1" class="w-100" />
        </div>
        <div class="form-group blog-author blog-div-outline">
            @Html.DisplayFor(model => model.Author)
        </div>
        <div class="form-group blog-author blog-div-outline">
            @Html.DisplayFor(model => model.Posted)
        </div>
        <div class="form-group blog-author blog-div-outline">
            @Html.DisplayFor(model => model.Content)
        </div>
    </div>
   
    <div class="col-md-12 form-group text-center">
        <a class="btn btn-default create-submit" href=@Url.Action("Edit", new { id = Model.BlogPostID })>
            <i class="fas fa-edit"> Edit</i>
        </a>
        <a class="btn btn-default create-cancel" href=@Url.Action("Index") role="button">
            <i class="fas fa-arrow-circle-left"> Back to List</i>
        </a>
    </div>
    <hr />
</div>
