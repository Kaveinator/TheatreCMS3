@model IEnumerable<TheatreCMS3.Areas.Blog.Models.BlogAuthor>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="card">
    <div class="row no-gutters">
        <div class="col-auto">
            <img src="https://placeholder.com/150" class="img-fluid" alt="Blog Author">
        </div>
        <div class="col">
            <div class="blogAuthor-Card text-left">
                <p class="card-text">
                    Author for Theater Vertigo<br />
                    <b>John Smith</b><br />John is an experienced blog author with past creations in the<br />entertainment industry such as movies, television, and stage<br /><br />
                </p>
            </div>
            <div>
                <a href="#edit" class="btn btn-primary">Edit/Details</a>
                <button class="btn" style="float:right"><a href="#delete" class="btn btn-secondary">Delete</a></button>
            </div>
            
        </div>
    </div>
    <div class="card-footer w-100 text-muted">
        
    </div>
</div>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Joined)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Left)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.BlogAuthorid }) |
            @Html.ActionLink("Details", "Details", new { id = item.BlogAuthorid }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.BlogAuthorid })
        </td>
    </tr>
}

</table>
