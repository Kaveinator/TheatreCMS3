@model IEnumerable<TheatreCMS3.Areas.Blog.Models.BlogPhoto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhotoName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th></th>
    </tr>


    @foreach (var item in Model)
    {
        if (item.Photo != null)
        {

            
            ViewBag.Base64String = "data:image/png;base64," + Convert.ToBase64String(item.Photo);

        }
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoName)
            </td>

            <td>
                <img alt="No Image" src="@ViewBag.Base64String"/>
            </td>
            <td>

            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new
                {
                    id = item.BlogPhotoId
                    }) |
                @Html.ActionLink("Details", "Details", new
                {
                    id = item.BlogPhotoId
                }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BlogPhotoId })
            </td>
        </tr>
    }

</table>






