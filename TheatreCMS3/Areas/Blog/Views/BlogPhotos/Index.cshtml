@model IEnumerable<TheatreCMS3.Areas.Blog.Models.BlogPhoto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="BlogPhoto-Index--FormContainer">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @*display photo only if a photo exists for the blog entry*@
                    @if (item.Photo != null)
                    {
                        <img src="@Url.Action("ViewImage", "BlogPhotos", new { id = item.BlogPhotoId } )" />
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BlogPhotoId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BlogPhotoId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BlogPhotoId })
                </td>
            </tr>
        }
    </table>

</div>
