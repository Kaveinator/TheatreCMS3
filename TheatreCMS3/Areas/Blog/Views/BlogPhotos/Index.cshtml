@model IEnumerable<TheatreCMS3.Areas.Blog.Models.BlogPhoto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- CSS -->
<link href="@Url.Content("~/Areas/Blog.css")" rel="stylesheet" type="text/css" />

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <div class="card-columns">
        @foreach (var item in Model)
        {
            <div class="card blogImage-container">
                <img src="data:image;base64,@System.Convert.ToBase64String(item.Photo)" class="card-img image-overlay" />
                <a href="@Url.Action("Details", "BlogPhotos", new { id = item.BlogPhotoId })" class="card-img-overlay">

                    <span class="card-overlay cardImage-title">@Html.DisplayFor(modelItem => item.Title)</span>

                    <!-- This link (<a>) needs to be here for the "Edit" and "Delete" buttons to render correctly -->
                    <span class="card-overlay badge badge-pill badge-edit"><a></a></span>

                    @Html.ActionLink("Edit", "Edit", null, new { id = item.BlogPhotoId }, new { @class = "card-overlay badge badge-pill badge-edit" })
                    <a id="deleteItem" class="card-overlay badge badge-pill badge-delete deleteItem" data-target="#deleteModal" data-toggle="modal" data-path="@item.BlogPhotoId">
                        Delete
                    </a>
                </a>
            </div>
        }

        <!-- Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content modal-bg">
                    <div class="modal-header">
                        <h5 class="blogHeader" id="deleteModalLabel">Are you sure you would like to delete this image?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer justify-content-center">
                        <button type="button" class="btn btn-cancel" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn modal-delete deleteBtn" id="deleteBtn" data-toggle="modal" data-target="#deleteModal">
                            Delete
                        </button>
                        @*data-url="@Url.Action($"Delete/{item.BlogPhotoId}")"*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</table>

<script src="~/Scripts/Areas/Blog.js"></script>
