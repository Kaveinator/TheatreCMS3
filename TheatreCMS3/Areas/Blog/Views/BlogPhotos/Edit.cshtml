@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="blogPhoto-edit-center">Edit Blog Photo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
            <div class="blogPhoto-edit-formContainer">
                <div class="blogPhoto-edit-formBody">
                    <h4 class="blogPhoto-edit-center">BlogPhoto</h4>

                    @Html.ValidationSummary(true, "", new { @class = "blogPhoto-edit-formBody" })

                    @Html.HiddenFor(model => model.BlogPhotoId)

                    <div class="blogPhoto-edit-center">
                        @Html.LabelFor(model => model.PhotoName, htmlAttributes: new { @class = "blogPhoto-edit-formBody", @hidden = "hidden" })
                        <p class="blogPhoto-edit-fieldLabelPosition">Photo Name:</p>
                        <div>
                            @Html.EditorFor(model => model.PhotoName, new { htmlAttributes = new { @size = "75", @class = "blogPhoto-edit-inputField" } })
                            @Html.ValidationMessageFor(model => model.PhotoName, "", new { @class = "blogPhoto-edit-formBody" })
                        </div>
                    </div>

                    <div class="blogPhoto-edit-center">
                        @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "blogPhoto-edit-formBody", @hidden = "hidden" })
                        <div class="blogPhoto-edit-formBody">
                            @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "blogPhoto-edit-formBody" } })
                            @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "blogPhoto-edit-formBody" })
                        </div>
                    </div>
                </div>
                    
                        <div class="blogPhoto-edit-submitBtnDiv">
                            <input type="submit" value="Save" class="blogPhoto-edit-button1" />
                        </div>

                <div class="blogPhoto-edit-backBtnDiv">
                    <button class="blogPhoto-edit-button2">@Html.ActionLink("Back to List", "Index", null, new { @class = "blogPhoto-edit-actionLink" })</button>
                </div>
            </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
