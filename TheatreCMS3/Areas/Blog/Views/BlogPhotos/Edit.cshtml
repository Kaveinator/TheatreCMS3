@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<div class="blogForm-container">
    <div class="blogForm">
        @using (Html.BeginForm("Edit", "BlogPhotos", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4 class="blogHeader">Edit BlogPhoto</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.BlogPhotoId)

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "col-md-12 blogForm-label" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "blogForm-input", @placeholder = "Image Title" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <!-- This is where converted byte array (image) will display -->

                <div class="form-group">
                    <label class="col-md-12 blogForm-label">Current Photo</label>
                    @*@Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "col-md-12 blogForm-label" })*@
                    <div class="col-md-12">
                        <img src="data:image;base64,@System.Convert.ToBase64String(Model.Photo)" class="blogImage" />
                    </div>
                </div>

                <!-- Added form for image upload -->
                <div class="form-group">
                    <label class="col-md-12 blogForm-label">Upload Image:</label>
                    <div class="col-md-12 col-md-offset-12">
                        <input type="file" class="blogForm-label centerFile" name="blogImage" id="blogImage" accept="image/*" />
                        <img id="image-preview" src="https://placehold.co/100x100" alt="User Blog Image" class="blogImage" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-12 col-md-12">
                        <input type="submit" value="Save" class="btn blogBtn cms-bg-secondary-dark centerBtn" />
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="cold-md-offset-12 col-md-12">
        <div>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn blogBtnOther cms-bg-main centerBtn" })
        </div>
    </div>
</div>

<!-- Script to render image preview -->
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (event) {
                $('#image-preview').attr('src', event.target.result);
            }

            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#blogImage").change(function () {
        readURL(this);
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
