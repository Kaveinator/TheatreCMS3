@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<head>
    <link rel="stylesheet" href="~/Content/Areas/Blog.css" />
</head>

<body style="background-color: #000000">

    <div class="blogphoto-create-h4container">
        <h4>Blog Photo Create</h4>
    </div>

    <div class="blogphoto-create-container">


        @using (Html.BeginForm("Create", "BlogPhotos", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>



            <div class="blogphoto-create-rows flex justify-content-around align-items-start">
                <div class="form-group">
                    @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        <input type="file" name="ImageFile" id="ImageFile" />
                        @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div class="blogphoto-create-rows">
                    <input type="submit" value="Create" class="blogphoto-create-submitbtn" />

                    <div class="blogphoto-create-backbtn">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            </div>
         </div>
        }

    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>