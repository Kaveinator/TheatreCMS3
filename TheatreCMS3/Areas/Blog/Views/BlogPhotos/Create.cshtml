@model TheatreCMS3.Areas.Blog.Models.BlogPhoto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="blogPhoto-create-center">Create Blog Photo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
        <div class="blogPhoto-create-formContainer">
            <div class="blogPhoto-create-formBody">
                <h4 class="blogPhoto-create-center">BlogPhoto</h4>

                @Html.ValidationSummary(true, "", new { @class = "blogPhoto-create-formBody" })
                <div class="blogPhoto-create-center">
                    @Html.LabelFor(model => model.PhotoName, htmlAttributes: new { @class = "blogPhoto-create-formBody", @hidden = "hidden" })
                    <p class="blogPhoto-create-fieldLabelPosition">Photo Name:</p>
                    <div>
                        @Html.EditorFor(model => model.PhotoName, new { htmlAttributes = new { @size = "75", @class = "blogPhoto-create-inputField", placeholder = "Photo name here" } })
                        @Html.ValidationMessageFor(model => model.PhotoName, "", new { @style = "blogPhoto-create-formBody" })
                    </div>
                </div>

                <div class="blogPhoto-create-center">
                    @Html.LabelFor(model => model.Photo, htmlAttributes: new { @class = "blogPhoto-create-formBody", @hidden = "hidden" })
                    <div class="blogPhoto-create-formBody">
                        @Html.EditorFor(model => model.Photo, new { htmlAttributes = new { @class = "blogPhoto-create-formBody" } })
                        @Html.ValidationMessageFor(model => model.Photo, "", new { @class = "blogPhoto-create-formBody" })
                    </div>
                </div>
            </div>
    
                <div class="blogPhoto-create-submitBtnDiv">
                    <input type="submit" value="Create" class="blogPhoto-create-button1" /> @*Create button*@
                </div>
    
            <div class="blogPhoto-create-backBtnDiv">
                <button class="blogPhoto-create-button2">@Html.ActionLink("Back to List", "Index", null, new { @class = "blogPhoto-create-actionLink" })</button>
            </div>
        </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
