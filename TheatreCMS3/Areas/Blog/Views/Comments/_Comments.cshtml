@model IEnumerable<TheatreCMS3.Areas.Blog.Models.Comment>

<div>
  <div class="badge badge-success successBadge">The comment was deleted successfully  <i class="fas fa-check"></i></div>
</div>
@foreach (var item in Model)
{
  <div class="card cms-text-dark commentCard" data-CommentId="@item.CommentId">
    <div class="card-body">
      <h5 class="card-title">@Html.DisplayFor(modelItem => item.Author)</h5>
      <h6 class="card-subtitle mb-2 text-muted">@item.TimeSince()</h6>
      <p class="card-text">@Html.DisplayFor(modelItem => item.Message)</p>

      @*Like button*@
      <button class="btn fas fa-thumbs-up fa-sm likeBtn" data-CommentId="@item.CommentId" data-CommentPath="@Url.Action("AddLike", "Comments", new { id = item.CommentId })">
      </button>
      <label class="likes" data-CommentId="@item.CommentId">@Html.DisplayFor(modelItem => item.Likes) </label>

      @*Dislike button*@
      <Button class="btn fas fa-thumbs-down fa-sm dislikeBtn" data-CommentId="@item.CommentId" data-CommentPath="@Url.Action("AddDislike", "Comments", new { id = item.CommentId })">
      </Button>
      <label class="dislikes" data-CommentId="@item.CommentId">@Html.DisplayFor(modelItem => item.Dislikes) </label>

      <button class="btn fas fa-reply">Reply</button>



      <br />
      @*Progress bar*@
      <div class="progress">
        <div class="progress-bar bg-success" data-CommentId="@item.CommentId" role="progressbar" style="width: @item.LikeRatio()%;" aria-valuenow="7" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <label class="like-ratio" data-CommentId="@item.CommentId">@item.LikeRatio()% likes</label>

      @*Trashcan icon delete button*@
      <button type="button" class="btn fas fa-trash fa-mdb float-right cms-text-main trashcan" data-toggle="modal" data-target="#deleteModal" data-CommentPath="@Url.Action("DeleteConfirmed", "Comments", new { id = item.CommentId })" data-CommentId="@item.CommentId"></button>

    </div>
  </div>
}

@*Confirm delete modal*@
<div class="modal cms-text-dark" id="deleteModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-body">
        <p>Are you sure you want to delete this comment?</p>
      </div>
      <div class="modal-footer">

        @*deleteConfirmed button, should trigger second modal with confirmation and checkmark, and delete comment and hide it from page*@
        <button type="button" class="btn btn-danger deleteConfirmed" data-CommentPath=" " data-CommentId=" ">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>











