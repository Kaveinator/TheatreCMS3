@model IEnumerable<TheatreCMS3.Areas.Blog.Models.Comment>

@{
  ViewBag.Title = "_Comments";
}


@foreach (var item in Model)
  {
    <div class="jumbotron jumbotron-fluid cms-bg-main-light comment-jumbotron-container">
      <div class="container cms-bg-light comment-container pb-3 cms-text-dark">
        <h1 class="display-4 pt-2 comment-author font-weight-bolder">
          @Html.DisplayFor(modelItem => item.Author)
          <!-- Dislike -->
          <button onclick="clickAddDislike(@item.CommentID)" class="btn comment-btn float-right ml-2 comment-tooltip">
            <div class="fa fa-thumbs-down">
              &nbsp;Dislike<p id="dislikeValue @item.CommentID" class="comment-tooltiptext comment-btn">Current Dislikes:@Html.DisplayFor(modelItem => item.DisLikes)</p>
            </div>
          </button>
          <!-- LIKE -->
          <button onclick="clickAddLike(@item.CommentID)" class="btn comment-btn float-right comment-tooltip">
            <div class="fa fa-thumbs-up">
              &nbsp;Like<p id="likeValue @item.CommentID" class="comment-tooltiptext comment-btn">Current Likes:@Html.DisplayFor(modelItem => item.Likes)</p>
            </div>
          </button>
        </h1>
        <hr />
        <!-- Date -->
        <p class="text-sm-left">@Html.DisplayFor(modelItem => item.CommentDate)</p>
        <p class="lead comment-text font-weight-normal">&nbsp;&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.Message)</p>
        <hr />
        <!-- Like and Dislike Ratio -->
        <div class="pb-2">
          <!-- Like Ratio -->
          <div class="progress comment-likeRatio-bar">
            <div id="progbarLike @item.CommentID" class="progress-bar comment-btn" role="progressbar" style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100">
              <div id="spanLikeJson @item.CommentID"><span id="progbarLikeInside @item.CommentID"></span>
                Likes&nbsp;
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-smile comment-black" viewBox="0 0 16 16">
                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                  <path d="M4.285 9.567a.5.5 0 0 1 .683.183A3.498 3.498 0 0 0 8 11.5a3.498 3.498 0 0 0 3.032-1.75.5.5 0 1 1 .866.5A4.498 4.498 0 0 1 8 12.5a4.498 4.498 0 0 1-3.898-2.25.5.5 0 0 1 .183-.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z" />
                </svg>
                
              </div>
            </div>
            <!-- Dislike Ratio -->
            <div id="progbarDislike @item.CommentID" class="progress-bar bg-dark comment-btn" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100">
              <div id="spanDislikeJson @item.CommentID"><span id="progbarDislikeInside @item.CommentID"></span>
                Dislikes&nbsp;
                <svg onload="getRatioComment(@item.CommentID)" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-emoji-frown comment-btn" viewBox="0 0 16 16">
                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                  <path d="M4.285 12.433a.5.5 0 0 0 .683-.183A3.498 3.498 0 0 1 8 10.5c1.295 0 2.426.703 3.032 1.75a.5.5 0 0 0 .866-.5A4.498 4.498 0 0 0 8 9.5a4.5 4.5 0 0 0-3.898 2.25.5.5 0 0 0 .183.683zM7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5zm4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5z" />
                </svg>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Reply and trash -->
        <button type="button" class="btn font-weight-bold comment-btn">Reply</button>
        <button class="btn comment-btn float-right"><i class="fa fa-trash"></i></button>


      </div>
    </div>
  }

