@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-horizontal {
        box-sizing: border-box;
        border-radius: 12px;
        padding: 5px;
        border-color: #BD1A11;
        background-color: #BD1A11;
        width: 600px;
        height: 500px;
        text-align: center;
    }
</style>

<h2 class="blogauthors-createEdit--header">Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Blog Author</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.BlogAuthorId)

    <div class="form-group">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.Bio, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="blogauthors-createEdit--datepicker">
        <div class="form-group">
            @Html.LabelFor(model => model.Joined, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Joined, new { @type = "date", @class = "form-control datepicker" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Left, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Left, new { @type = "date", @class = "form-control datepicker" })
            </div>
        </div>
        </div>
        <div class="form-group">
            <div class="blogauthors-createEdit--createbutton">
                <input type="submit" value="Save" class="btn btn-default" style="background-color: green" />
                @Html.ActionLink("Back to List", "Index", "BlogAuthors", null, new { @class = "btn btn-dark" })
            </div>
        </div>
    </div>
    }

   
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
