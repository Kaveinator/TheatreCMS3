@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Areas/Blog.css" rel="stylesheet" type="text/css" />

<h3 class="BlogAuthor-edit--heading">Edit Blog Author</h3>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal container BlogAuthor-edit--form">

        <div class="flex-column">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.BlogAuthorID)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.TextAreaFor(model => model.Bio, rows: 5, columns: 30, htmlAttributes: new { @class = "BlogAuthor-edit--BioName" })
                    @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="d-flex justify-content-center flex-wrap">
                <div class="form-group">
                    @Html.LabelFor(model => model.Joined, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Joined, new { htmlAttributes = new { @class = "BlogAuthor-edit--joined", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.Joined, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Left, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Left, new { htmlAttributes = new { @class = "BlogAuthor-edit--left", @type = "date" } })
                        @Html.ValidationMessageFor(model => model.Left, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-start flex-wrap">
                <div class="btn btn-secondary BlogAuthor-edit--btList">
                    @Html.ActionLink("Back to List", "Index")
                </div>
                <div>
                    <input type="submit" value="Save" class="btn btn-success BlogAuthor-edit--edit" />
                </div>
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
