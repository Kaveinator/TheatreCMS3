@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
  <h4>BlogAuthor</h4>
  <hr />
  @Html.ValidationSummary(true, "", new { @class = "text-danger" })
  @Html.HiddenFor(model => model.BlogAuthorId)
<div class="blogauthor-div-container cms-bg-main-light blogauthor-rounded-corners">
  <div class="form-group">
    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2 mt-2" })
    <div class="col-md-10">
      @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "blogauthor-name-textbox" } })
      @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
      @Html.TextAreaFor(model => model.Bio, 6, 65, new { htmlAttributes = new { @class = "form-control" } })
      @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
    </div>
  </div>
  <div class="container ml-5">
    <div class="row">
      <div class="form-group">
        @Html.LabelFor(model => model.Joined, htmlAttributes: new { @class = "control-label col-md-2 blogauthor-left-timedate" })
        <div class="col-md-10">
          @Html.EditorFor(model => model.Joined, new { htmlAttributes = new { @class = "blogauthor-timedate-timedate blogauthor-left-timedate" } })
          <div class="row">
            @Html.ValidationMessageFor(model => model.Joined, "", new { @class = "bg-dark text-danger" })
          </div>
        </div>
      </div>

      <div class="form-group">
        @Html.LabelFor(model => model.Left, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
          @Html.EditorFor(model => model.Left, new { htmlAttributes = new { @class = "blogauthor-timedate-timedate" } })
          <div class="row">
            @Html.ValidationMessageFor(model => model.Left, "", new { @class = "bg-dark text-danger" })
          </div>
        </div>
      </div>
    </div>
  </div>


    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <a href='@Url.Action("Index")'>
          <input type="button" value="Back to List" class="btn btn-secondary mt-3 mb-2" />
        </a>
        <input type="submit" value="Edit" class="btn btn-success mt-3 mb-2" />
      </div>
    </div>
  </div>
</div>
  }


  @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
  }
