@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center pt-3">Edit Blog Author</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal blogAuthor-create--form">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.BlogAuthorId)

        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "blogAuthor-create--name blogAuthor-create--label" })
            <div class="col">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-dark" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "blogAuthor-create--label" })
            <div class="col">
                @Html.TextAreaFor(model => model.Bio, htmlAttributes: new { @class = "blogAuthor-create--biobox" } )
                @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group mb-5">
            @Html.LabelFor(model => model.DateJoined, "Date Joined", htmlAttributes: new { @class = "blogAuthor-create--label blogAuthor-create--joinlabel" })
            @Html.LabelFor(model => model.DateLeft, "Date Left", htmlAttributes: new { @class = "blogAuthor-create--label blogAuthor-create--leftlabel" })
            <div class="text-center">
                @Html.TextBoxFor(model => model.DateJoined, new { @type = "date", @class = "blogAuthor-create--datepicker_joined blogAuthor-create--datepicker pl-2" } )
                @Html.TextBoxFor(model => model.DateLeft, new { @type = "date", @class = "blogAuthor-create--datepicker_left blogAuthor-create--datepicker pl-2" } )
            </div>
            <div class="text-center mt-5">
                @Html.ValidationMessageFor(model => model.DateJoined, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="button" class="btn btn-dark">@Html.ActionLink("Back to List", "Index", null, new { @class = "text-white"})</button>
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
