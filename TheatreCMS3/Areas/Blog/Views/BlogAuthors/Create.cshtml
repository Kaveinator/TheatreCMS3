@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Areas/Content/Areas/Blog.css" />
</head>

<body>
    <h2>Create</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form">
            <h4>BlogAuthor</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control text-field" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row justify-content-center">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.Bio, new { htmlAttributes = new { @class = "form-control text-area", style = "min-width:100px;" } })
                        @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row justify-content-center">
                <div class="form-col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Joined, htmlAttributes: new { @class = "control-label col-sm-2" })
                        @Html.EditorFor(model => model.Joined, new { htmlAttributes = new { @class = "form-control datetime-field", type = "datetime-local", required = "required" } })
                        @Html.ValidationMessageFor(model => model.Joined, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-col">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Left, htmlAttributes: new { @class = "control-label col-sm-2" })
                        @Html.EditorFor(model => model.Left, new { htmlAttributes = new { @class = "form-control datetime-field", type = "datetime-local" } })
                        @Html.ValidationMessageFor(model => model.Left, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-row justify-content-center">
                <div class="form-col">
                    @Html.ActionLink("Back to List", "Index")
                </div>

                <div class="form-col">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</body>