@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-horizontal {
        box-sizing: border-box;
        border-radius: 12px;
        padding: 5px;
        border-color: #BD1A11;
        background-color: #BD1A11;
        width: 600px;
        height: 500px;
        text-align: center;
        margin:auto;
        
       
    }
</style>

<h2 class="blogauthors-createEdit--header">Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h4 class="blogauthors-createEdit--header">BlogAuthor</h4>
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="">
            <div class="form-group">
                @Html.LabelFor(model => model.Bio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.Bio, new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.Bio, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="blogauthors-createEdit--datepicker">
            <div class="form-group">
                @Html.LabelFor(model => model.Joined, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Joined, new { @type = "date", @class = "form-control datepicker" })
                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Left, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Left, new { @type = "date", @class = "form-control datepicker" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="blogauthors-createEdit--createbutton">
                <input type="submit" value="Create" class="btn btn-default" style="background-color: green" />


                @Html.ActionLink("Back to List", "Index", "BlogAuthors", null, new { @class = "btn btn-dark" })
            </div>
        </div>
    </div>
        }

        

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
