@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h>Are you sure you want to delete this?</h>

<div class="card">
    <h4>Blog Author</h4>
    <!-- Card Header -->
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link active" id="authorDetailsTab" data-toggle="tab" href="#authorDetailsView">Author Details</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="blogPostsTab" data-toggle="tab" href="#blogPostsView" onclick="toggleView('blogPosts')">Blog Posts</a>
            </li>
        </ul>
    </div>

    <!-- Card Body -->
    <div class="card-body tab-content">
        <!-- Author Details View -->
        <div id="authorDetailsView" class="tab-pane fade show active">
            <!-- Image, Name, Bio, and Joined Details -->
            <div class="row">
                <div class="col-md-4">
                    <img src="~/Content/images/placeholder.jpg" class="img-fluid rounded" alt="Author Image">
                </div>
                <div class="col-md-8">
                    <dl class="dl-horizontal">

                        <!-- Social Media Icons -->
                        <div class="float-right mb-3">
                            <a href="https://www.facebook.com/your-facebook-page" target="_blank" title="Facebook">
                                <i class="fab fa-facebook fa" style="color: black;"></i>
                            </a>
                            <a href="https://www.instagram.com/your-instagram-account" target="_blank" title="Instagram">
                                <i class="fab fa-instagram fa" style="color: black;"></i>
                            </a>
                        </div>

                        <dt>
                            @Html.DisplayNameFor(model => model.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Bio)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Bio)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Joined)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Joined)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <!-- BlogPosts View -->
        <div id="blogPostsView" class="tab-pane fade">
            <!-- Add code to display blog posts -->
            (Implement in future stories)
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="button-container">
            <div class="row justify-content-start align-items-end">
                <div class="m-4"><input type="submit" value="Delete" class="custom-button submit" /></div>
                <div class="m-4"> @Html.ActionLink("Back to List", "Index", null, new { @class = "custom-button back"})</div>
            </div>
        </div>
    }
</div>
