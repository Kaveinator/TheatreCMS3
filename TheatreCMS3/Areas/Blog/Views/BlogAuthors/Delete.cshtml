@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
  ViewBag.Title = "Delete";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div class="container">
  <div class="cms-bg-main-light">
    <div class="row">
      <div class="col-4">
        <div class="m-2">
          <img src="https://www.fillmurray.com/340/340" />
        </div>
      </div>

      <div class="col-8">
        <div class="row">
          <p class="blogauthor-details-p-name mt-2">

            @Html.DisplayFor(model => model.Name)
          </p>
        </div>

        <div class="row mr-2">
          <div class="blockquote">
            <p>
              @Html.DisplayFor(model => model.Bio)
            </p>
          </div>
        </div>
        <div">
          <div class"row">
            <p>
              Joined Date
              @Html.DisplayFor(model => model.Joined)
              |
              Left Date
              @Html.DisplayFor(model => model.Left)
            </p>
          </div>
      </div>
    </div>
  </div>
  <div class="container">
    @using (Html.BeginForm())
    {
      @Html.AntiForgeryToken()
      <div class="row">
        <div class="form-actions">
          <button type="submit" value="" class="btn btn-danger mt-2 ml-4 mr-2" /><i class="fa fa-trash"></i>
        </div>
        <button type="button" class="btn btn-primary mt-2" onclick="location.href = '@Url.Action("", "BlogAuthors")'"><i class="fa fa-list"></i> Back to List</button>
      </div>
    }</div>
  </div>

