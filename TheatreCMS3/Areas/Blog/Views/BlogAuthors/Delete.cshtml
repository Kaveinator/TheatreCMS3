@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Areas/Blog.css" rel="stylesheet" type="text/css" />

<div class="container BlogAuthor-details--body">
    <h4>Are you sure you want to delete this?</h4>
    <!-- Main card styling -->
    <div class="row BlogAuthor-details--card flex-wrap-reverse">
        <div class="m-auto">
            <img src="https://via.placeholder.com/175" alt="pic" class="m-2" />

        </div>
        <div class="col-lg-9 col-md-8 col-sm-7 container displays">
            <div class="row">
                <h4 class="ml-3">@Html.DisplayFor(model => model.Name)</h4>
                <div class="ml-auto mr-1">
                    <a href="https://www.facebook.com/"><i class="fab fa-facebook"></i></a>
                    <a href="https://www.instagram.com/?hl=en"><i class="fab fa-instagram-square"></i></a>
                </div>
            </div>
            <p class="mb-sm-5">
                @Html.DisplayFor(model => model.Bio)
            <p>
                <div class="row BlogAuthor-details--dates">
                    <div class="col-lg-3 col-md-4 col-sm-5 col-6">
                        <h6>Joined Date</h6>
                        @Html.DisplayFor(model => model.Joined)
                    </div>
                    <div class="col-sm-4 col-6">
                        <h6>Left Date</h6>
                        @Html.DisplayFor(model => model.Left)
                    </div>
                </div>
        </div>
    </div>
    <!-- Bottom row buttons section -->
    <div class="row">
        <div>
            <a href="~/Blog/BlogAuthors/Index" class="btn btn-secondary m-1 fa fa-arrow-cirle-left py-2"><i class="fa fa-arrow-circle-left">Back to List</i></a>
        </div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger m-1 py-1" />
            </div>
        }
    </div>
    
</div>