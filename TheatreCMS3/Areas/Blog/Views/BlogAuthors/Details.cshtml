@model TheatreCMS3.Areas.Blog.Models.BlogAuthor
@Styles.Render("~/Content/Areas/Blog.css")


@{
  ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
  <div class="d-flex justify-content-center mx-auto" style="margin-bottom: -4px;">
    <div class="p-1 pl-2 py-2 bg-light rounded-left">
      <input type="button" onclick="@("window.location.href='" + @Url.Action("Details", "BlogAuthors", new { id = Model.BlogAuthorId }) + "'")" value="Author Details" class="btn-responsive btn btn-dark" />
    </div>
    <div class="p-1 py-2 bg-light ">
      <input type="button" onclick="@("window.location.href='" + @Url.Action("Index", "BlogPost", new { id = Model.BlogAuthorId }) + "'")" value="Blog Posts" class="btn-responsive btn btn-dark" />
    </div>
  </div>
  <div class="row dl-horizontal bg-light rounded text-dark">
    <div class="col-md-auto">
      <img src="https://www.fillmurray.com/g/200/300" alt="Sample Photo" class="blogAuthorImg my-4" />
    </div>
    <div class="col-md-7 pt-3 text-wrap">
      <div class="row d-flex justify-content-between">
        <div class="col-md-auto">
          <h1>@Html.DisplayFor(model => model.Name)</h1>
        </div>
        <div class="col-md-auto">
          <a href="https://www.facebook.com/"> <i class="fab fa-facebook fa-2x"></i></a> <a href="https://www.instagram.com/"><i class="fab fa-instagram fa-2x"></i></a>
        </div>
      </div>
      <div class="row-cols-md-auto" style="overflow: hidden; height: 280px">
        <p>@Html.DisplayFor(model => model.Bio)</p>
      </div>
      <div class="row">
        <div class="col-md-auto">
          <h6><strong>Joined Date</strong></h6>
          <p class="">@Html.DisplayFor(model => model.Joined)</p>
        </div>
        <div class="col-md-auto">
          <h6><strong>Left Date</strong></h6>
          <p class="">@Html.DisplayFor(model => model.Left)</p>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex justify-content-between">
    <div>
      <button type="button" onclick="@("window.location.href='" + @Url.Action("Index", "BlogAuthors") + "'");" class="btn btn-dark m-1">
        <i class="fas fa-arrow-circle-left"></i> Back to List
      </button>
      <button type="button" onclick="@("window.location.href='" + @Url.Action("Edit", "BlogAuthors", new { id = Model.BlogAuthorId }) + "'");" class="btn btn-success m-1">
        <i class="fas fa-edit"></i> Edit
      </button>
    </div>
    <button type="button" onclick="@("window.location.href='" + @Url.Action("Delete", "BlogAuthors", new { id = Model.BlogAuthorId }) + "'");" class="btn btn-danger m-1">
      <i class="fas fa-trash-alt"></i>
    </button>
  </div>
</div>