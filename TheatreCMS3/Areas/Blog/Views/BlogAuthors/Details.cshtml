@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <!-- DETAILS BUTTON SECTION -->
    <div>
        <div class="details-container-top text-dark mx-auto">
            <div class="text-center">
                <button onclick="toggleContent('info')" class="btn btn-secondary">Author Details</button>
                <button onclick="toggleContent('blog')" class="btn btn-secondary">Blog Posts</button>
            </div>
        </div>
    </div>
    <!-- END DETAILS BUTTON SECTION -->
    
    <!-- DETAILS INFO SECTION -->
    <div class="details-container-bot text-dark row">
        <!-- AUTHOR IMAGE -->
        <div>
            <p>image PH</p>
        </div>
        <!-- END AUTHOR IMAGE -->

        <!-- CONTENT AREA -->
        <div id="content-area" class="pl-3">
