                <p>content 1</p>
            </div>
            <div id="test" class="content" style="display: none;">
                <p>content 2</p>
            </div>
            <div id="info" class="content">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Bio)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Bio)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Joined)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Joined)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Left)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Left)
                    </dd>
                </dl>
            </div>
        </div>
        <!-- END CONTENT AREA -->
    </div>
    <!-- END DETAILS INFO SECTION -->
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.BlogAuthorId }) |
