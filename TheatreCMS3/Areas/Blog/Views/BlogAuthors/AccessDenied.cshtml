@model TheatreCMS3.Areas.Blog.Models.BlogAuthor

@{
    ViewBag.Title = "AccessDenied";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="BlogAuthor-RestrictCRUD--AccessDeniedPage">

    <div class="BlogAuthor-RestrictCRUD--DeniedImgContainer">
        <img src="~/Content/images/access_denied.png" class="BlogAuthor-RestrictCRUD--DeniedImg" />
    </div>

    <div class="BlogAuthor-RestrictCRUD--Heading">
        <h1>You are not authorized to visit that page</h1>
        <br />
        <h3>
            Have an account? @Html.ActionLink("Click here to Login", "Login", "Account",
                            new { area = "", controller = "Account", ReturnUrl = ViewBag.returnUrl },
                            new { id = "Login" })
        </h3>
    </div>


</div>

