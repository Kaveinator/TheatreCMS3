@model IEnumerable<TheatreCMS3.Areas.Blog.Models.BlogAuthor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Blog Authors</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="offset-3">
    <ul class="nav nav-pills blog-details--nav" id="pills-tab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="details-pill" data-toggle="pill" href="#details" role="tab" aria-controls="details" aria-selected="true">Author Details</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="posts-pill" data-toggle="pill" href="#posts" role="tab" aria-controls="posts" aria-selected="false">Blog Posts</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contact-pill" data-toggle="pill" href="#" role="tab" aria-controls="contact" aria-selected="false">Contact</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="twitter-pill" data-toggle="pill" href="#" role="tab" aria-controls="twitter" aria-selected="false">Twitter</a>
        </li>
    </ul>
</div>

<div class="tab-content">
    <div class="tab-pane active" id="details" role="tabpanel" aria-labelledby="details-pill">
        <div class="card blog-details--card">            
            @Html.Partial("_BlogAuthor") 
        </div>
    </div>
    <div class="tab-pane" id="posts" role="tabpanel" aria-labelledby="posts-pill">
        <div class="card blog-details--card">
            <div class="row">
                <div class="col-md-4">
                    <img src="http://via.placeholder.com/300x400" class="blog-details--image" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="text-dark">Insert blog posts here</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="tab-pane" id="" role="tabpanel" aria-labelledby="contact-pill">...</div>
    <div class="tab-pane" id="" role="tabpanel" aria-labelledby="twitter-tab">...</div>
</div>















