@model IEnumerable<TheatreCMS3.Areas.Blog.Models.BlogAuthor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Joined)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Left)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorPhoto)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Joined)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Left)
        </td>
        <td>
            @{
                var base64 = Convert.ToBase64String(item.AuthorPhoto);
                var imgsrc = string.Format("data:image/gif;base64,{0}", base64);
             }
            <img src="@imgsrc" class="BlogAuthor-Index--photo"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BlogAuthorId }) |
            @Html.ActionLink("Details", "Details", new { id=item.BlogAuthorId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BlogAuthorId })
        </td>
    </tr>
}

</table>
