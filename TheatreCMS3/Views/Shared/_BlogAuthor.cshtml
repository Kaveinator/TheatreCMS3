                            </div>

                            <div class="blogauthors-detailsDelete--column2">
                                <p> @Html.DisplayNameFor(model => model.Left) Date</p>
                                <p>@Html.DisplayFor(model => model.Left)</p>
                            </div>


                        </div>
                    </dl>
                </div>
