@using Microsoft.AspNet.Identity

@{ 
        // Get the current controller and action names
        var currentController = ViewContext.RouteData.Values["controller"].ToString();
        var currentAction = ViewContext.RouteData.Values["action"].ToString();
        // Check if the user is not logged in and if they are on the Calendar Events/Index or CalendarEvents/Details page
        if (!User.Identity.IsAuthenticated &&
        (currentController.Equals("CalendarEvents", StringComparison.OrdinalIgnoreCase) &&
         (currentAction.Equals("Index", StringComparison.OrdinalIgnoreCase) ||
          (currentAction.Equals("Details", StringComparison.OrdinalIgnoreCase)))))
        {
        <style>
            .calendarevent-shared--eventplannerbtn {
            position: fixed;
            bottom: 100px;
            right: 20px;
            padding: 10px 20px;
            background-color: var(--secondary-color);
            color: var(--dark-color);
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            }

                .calendarevent-shared--eventplannerbtn:hover {
                background-color: var(--light-color);
                text-decoration: underline;
                text-decoration-color: var(--dark-color);
            }
        </style>
        <button class="calendarevent-shared--eventplannerbtn" onclick="location.href='@Url.Action("LoginAsEventPlanner", "Account", new { area = "" })'">Log in as Event Planner</button>
    }
}
