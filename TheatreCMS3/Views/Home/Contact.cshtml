
@{
    ViewBag.Title = "Contact";
}
<div class="text-center">
    <h2>Contact</h2>
</div>

<br>

<div class="row">
    <div class="col-6">
        <form>
            <label for="name"><b>First & Last Name</b></label>
            <br>
            <input type="text" class="form-control" placeholder="Type your name here" required>
            <br>
            <label for="email"><b>Email</b></label>
            <br>
            <input type="text" class="form-control" placeholder="Type your email address here" required>
            <br>
            <label for="subject"><b>Subject</b></label>
            <br>
            <input type="text" class="form-control" placeholder="Type the subject of your email here" required>
            <br>
            <label for="message"><b>Message</b></label>
            <br>
            <input type="text" class="form-control" placeholder="Type your message here">
            <br>

            <button type="submit" class="btn btn-danger btn-lg btn-block">Submit</button>
        </form>
    </div>

    <div class="col-6">
        <h3>Donate</h3>
        <p>
            We also accept donations!
            <br>
            Please, donate to us via the button below!
        </p>
        <button type="submit" class="btn btn-danger btn-lg btn-block">Donate</button>
        <br>
        <br>
        <h3>Volunteer</h3>
        <p>
            We also offer internships!
            <br>
            Please, discover opportunities via the button below!
        </p>
        <button type="submit" class="btn btn-danger btn-lg btn-block">Volunteer</button>
    </div>
</div>