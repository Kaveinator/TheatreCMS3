<style>

  .body-content {
    width: 100vw;
    margin: 0;
    padding: 0;
    max-width: 100vw;
  }
  </style>

  @*.cms-contact--formContainer {
    padding-left: 50px;
    padding-right: 20px;
    margin-bottom: 75px;
  }
  .cms-contact--rightContainer {
    padding-right: 50px;
    padding-left: 20px;
  }
  .cms-contact--contactText {
    text-align: center;
    font-family: Broadway;
    color: var(--light-color);
    background-color: var(--dark-color); 
    padding: 100px;
    font-size: 50px;
    border-bottom-left-radius: 80px;
  }
  .form-control {
    padding: 15px;
  }
  .cms-contact--headerText {
    text-align: center;
    color: var(--light-color); 
    padding-top: 75px;
    margin-bottom: 0px;
    padding-bottom: 0px;
  }

  .cms-contact--textUnderline {
    border: none;
    width: 120px;
    height: 5px;
    background-color: var(--main-color);
    margin-top: 2px;
  }

  .cms-contact--nameContainer {
    padding-top: 10px;
  }
  .cms-contact--emailContainer {
    padding-top: 10px;
  }
  .cms-contact--subjectContainer {
    padding-top: 10px;
  }
  .cms-contact--messageContainer {
    padding-top: 10px;
    padding-bottom: 50px;
  }
  .cms-contact--donateText {
    font-size: 25px;
  }
  .cms-contact--volunteerText {
    font-size: 25px;
  }
  .cms-contact--volunteerContainer {
    padding-top: 50px;
  }
  .cms-contact--donateContainer {
    padding-top: 50px;
  }
  .cms-contact--SubmitButton, .cms-contact--DonateButton, .cms-contact--VolunteerButton {
    height: 35px;
    background-color: var(--main-color);
    border-radius: 5px;
    border: 2px solid var(--light-color);
    color: var(--light-color);
    padding: 3px 0;
  }
  .cms-contact--SubmitButton:hover, .cms-contact--DonateButton:hover, .cms-contact--VolunteerButton:hover {
    background-color: var(--main-color--light);
   }

  .cms-contact--SubmitButton {
    width: 100%;
  }
  .cms-contact--DonateButton, .cms-contact--VolunteerButton {
    width: 50%;
  }

  .text-center {
    padding-bottom: 20px;
  }
</style>*@

﻿<div class="body-content cms-bg-main-light">
  @{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
  }

  @*---Header Text---*@
  <h2 class="cms-contact--contactText">CONTACT US</h2>
  <h3 class="cms-contact--headerText"> GET IN TOUCH</h3>
  <hr class="cms-contact--textUnderline" />

  @*---Contact Form---*@
  <div class="row">
    <div class="col-7">
      <form class="cms-contact--formContainer">
        <div class="cms-contact--nameContainer">
          <label for="FirstAndLastName" required>First and Last Name *</label>
          <input type="text" class="form-control input-lg">
        </div>
        <div class="cms-contact--emailContainer">
          <label for="Email" required>Email Address *</label>
          <input type="email" class="form-control input-lg">
        </div>
        <div class="cms-contact--subjectContainer">
          <label for="Subject" required>Subject *</label>
          <input type="text" class="form-control input-lg">
        </div>
        <div class="cms-contact--messageContainer">
          <label for="message" required>Message *</label>
          <textarea class="form-control input-lg" rows="8"></textarea>
        </div>
        <div>
          <button type="submit" class="cms-contact--SubmitButton">Submit</button>
        </div>
      </form>
    </div>
   @*---Donate and Volunteer section---*@
    <div class="col-4">
      <div class="cms-contact--donateContainer">
        <h3> DONATE</h3>
        <p class="cms-contact--donateText">
          We've got a Patreon account!
          Help support live theatre in Portland, OR. by becoming a Patron today!
        </p>
        <button type="submit" class="cms-contact--DonateButton">Donate</button>
        <div class="cms-contact--volunteerContainer">
          <h3>VOLUNTEER</h3>
          <p class="cms-contact--volunteerText">Contact us to learn more about volunteering in the theatre.</p>
          <button type="submit" class="cms-contact--VolunteerButton">Volunteer</button>
        </div>
      </div>
    </div>
  </div>
</div>