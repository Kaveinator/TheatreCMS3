@{
  ViewBag.Title = "Contact";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="contact-us-title-section">
    <center><h2>Contact Us</h2></center>
</div>



<div class="container-fluid w-100">
        <center><h4>Get In Touch</h4></center>
        <div class="row">
            <div class="col-md-8">
                <form id="contact-us-form">
                    <div class="form-group">
                        <label for="fname">First Name</label>
                        <input type="text" class="form-control" id="fname" name="firstname">
                    </div>

                    <div class="form-group">
                        <label for="lname">Last Name</label>
                        <input type="text" class="form-control" id="lname" name="lastname">
                    </div>

                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" class="form-control" id="email" name="email">
                    </div>

                    <div class="form-group">
                        <label for="subject">Subject</label>
                        <input type="text" class="form-control" id="subject" name="subject">
                    </div>

                    <div class="form-group">
                        <label for="message">Message</label>
                        <textarea class="form-control" id="message" name="message" style="height:200px"></textarea>
                    </div>

                    <input type="submit" class="btn w-100 btn-large btn-primary" value="Submit">
                </form>
            </div>

            <div class="col-md-4">
                <div class="row">
                    <div class="col-6">

                        <h4>Donate</h4>
                        <p>We've got a Patreon account!  Help support live theatre in Portland, OR. by becoming a Patron today!</p>
                        <button class="btn w-100 btn-primary">Donate</button>


                        <h4>Volunteer</h4>
                        <p>Lorem ipsum dolor slt amet, consectetur adipiscing elit, sed do elumod tempor incididunt ut labore et dolore magna.</p>
                        <button class="btn w-100 btn-primary">Volunteer</button>

                    </div>
                </div>
            </div>
        </div>
 </div>
