
@{
    ViewBag.Title = "Contact";
}
<body class="home-Contact--Body">
    <div id="home-Contact--Title" class="jumbotron mb-5">        
        <h1>CONTACT US</h1>
    </div>
    <div class="CR-Contact--form_container">
        <h2 class="text-center mb-5">GET IN TOUCH</h2>
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <label for="firstAndLastName">First & Last Name *</label>
                    <input type="text" class="form-control mb-3 mt-1" name="firstAndLastName" required />
                    <label for="emailAddress">Email Address *</label>
                    <input type="email" class="form-control mb-3 mt-1" name="emailAddress" required />
                    <label for="subject">Subject *</label>
                    <input type="text" class="form-control mb-3 mt-1" name="subject" required />
                    <label for="message">Message *</label>
                    <textarea class="form-control mb-5 mt-1" id="message" rows="6" required></textarea>
                    <input type="submit" class="Contact-Input--Submit form-control mb-3" value="Submit" />
                </div>
            </div>
            <div class="col">
                <div id="home-Contact--Card1" class="card">
                    <div class="card-body">
                        <h5 class="card0title">DONATE</h5>
                        <p class="card-text">
                            We've got a Patreon account! Help support live theatre in Portland, OR
                            by becoming a Patron today!
                        </p>
                        <a href="#" class="btn btn-danger">Donate</a>
                    </div>
                </div>
                <div id="home-Contact--Card2"class="card">
                    <div class="card-body">
                        <h5 class="card-title">VOLUNTEER</h5>
                        <p class="card-text">
                            We're also looking for passionate volunteers who would like to assist us!
                            We have various positions available and would love to welcome you to our team.
                            We do follow COVID guidelines and volunteers are encouraged, but not required, to
                            abide by them as well.
                        </p>
                        <a href="#" class="btn btn-danger">Volunteer</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>