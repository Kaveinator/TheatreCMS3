@{ 
    ViewBag.Title = "Donate";
}

<h1>Help this web site exceed by making a donation today!</h1>

  <div class="donation-container">
    <form action="" method="POST" class="form-container">
      <h2>Donations</h2>
      <div class="inline">
        <label for="fname"><b>First Name:</b></label>
      </div>
      <div class="inline">
        <input type="text" placeholder="First Name" name="fname" required>
      </div>
      <div class="inline">
        <label for="lname"><b>Last Name:</b></label>
      </div>
      <div class="inline">
        <input type="text" placeholder="Last Name" name="lname" required>
      </div>
      <div class="inline">
        <label for="email"><b>Email:</b></label>
      </div>
      <div class="inline">
        <input type="text" placeholder="Email Address" name="email" required>
      </div>
      <div class="inline">
        <label for="address"><b>Address:</b></label>
      </div>
      <div class="inline">
        <input type="text" placeholder="Address" name="address" required>
      </div>
      <div class="inline">
        <label for="donation"><b>Donation Amount:</b></label>
      </div>
      <div class="inline">
        <input type="text" placeholder="Donation Amount" name="donation" required>
      </div>
      <div class="inline">
        <label for="message"><b>Message:</b></label>
      </div>
      <div class="inline">
        <textarea type="text" placeholder="Donation Comments..." name="message"></textarea>
      </div>

        <button type="submit" class="btn">SUBMIT</button>

    </form>
  </div>