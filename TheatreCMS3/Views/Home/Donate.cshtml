
@{
    ViewBag.Title = "Donate";
}

<div class="card home-donate-headerImage">
    <img class="card-img" src="~/Content/images/theater.jpg" alt="Theater image">
    <div class="card-img-overlay">
        <h1 class="card-title home-donate--header">Consider Making a Donation</h1>
    </div>
</div>


<form class="home-donate--form">
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="firstName">Name*:</label>
        </div>
        <div class="form-group col-md-5">

            <input type="text" class="form-control" id="firstName" placeholder="First Name" />
        </div>
        <div class="form-group col-md-5">
            <input type="text" class="form-control" id="lastName" placeholder="Last Name" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="emailAddress">Email Address*:</label>
        </div>
        <div class="form-group col-md-10">
            <input type="email" class="form-control" id="emailAddress" placeholder="Email Address" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="address">Address:</label>
        </div>
        <div class="form-group col-md-10">
            <input type="text" class="form-control" id="address" placeholder="Address" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="donationAmount">Donation Amount($):</label>
        </div>
        <div class="form-group col-md-10">
            <input type="number" class="form-control" id="donationAmount" placeholder="Donation Amount" />
        </div>

    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="donationComment">Donation Comment:</label>
        </div>
        <div class="form-group col-md-10">
            <textarea class="form-control" id="donationComment" rows="3" placeholder="Enter Comments Here..."></textarea>
        </div>
    </div>
    <button type="submit" class="btn home-donate--submitBtn">Submit</button>
</form>

