@{
    ViewBag.Title = "Donate";
}

<h1 class="text-center rental-donate-header">Consider Making A Donation</h1>

<div id="Donation-container" class="rental-donate-conatainer rental-donate-rounded-corners p-3 py-4">
    <form action="" method="post">

        <div class="row">
            <div class="col-md-3">
                <label for="name">Name*:</label>
            </div>
            <div class="col-md">
                <input class="Donation no-gutters rental-donate-input" type="text" name="name" placeholder="First name" required>
            </div>
            <div class="col-md">
                <input class="Donation no-gutters rental-donate-input" type="text" name="name" placeholder="Last Name" required>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label for="email">Email Address*:</label>
            </div>
            <div class="col-md">
                <input class="Donation rental-donate-input" type="text" name="email" placeholder="Email address" required>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label for="address">Address:</label>
            </div>
            <div class="col-md">
                <input class="Donation rental-donate-input" type="text" name="address" placeholder="Address">
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label for="donation">Donation amount*:</label>
            </div>
            <div class="col-md">
                <input class="Donation rental-donate-input" type="text" name="donation" placeholder="Donation amount" required>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label for="message">Message:</label>
            </div>
            <div class="col-md">
                <textarea class="Donation rental-donate-input" name="message" placeholder="Place comments here"></textarea>
            </div>
        </div>


        <input class="Donation" type="submit" value="Submit">
    </form>
</div>