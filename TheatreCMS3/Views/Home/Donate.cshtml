
@{
    ViewBag.Title = "Donate";
}

@using (Html.BeginForm("Donate", "Home", FormMethod.Post))

{
    <div class="home-donation--form">
        <img src="~/Content/images/theater.jpg" style="width: 100%;" />
        <div class="home-donation--title">
            <h1 class="text-center mt-2 mb-4" style="font-size: 52px; font-weight: 500;">Consider Making a Donation</h1>
        </div>
    </div>
    <div style="background-color: #f04d44; border-radius: 10px; padding: 15px 20px 15px 20px; margin: auto;">
        <form>
            <div class="row">
                <label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg">Name*</label>
                <div class="col-lg-4 col-md-10 col-sm-10">
                    <input type="email" class="form-control" id="colFormLabel" placeholder="First Name">
                </div>
                <div class="col-lg-4 col-md-10 col-sm-10">
                    <input type="text" class="form-control" id="colFormLabel" placeholder="Last Name">
                </div>
            </div>

            <br />
            <div class="form-group row">
                <label for="colFormLabelLg" class="col-lg-3 col-md-5 col-sm-6  col-form-label col-form-label-lg">Email Address*</label>
                <div class="col-lg-9 col-md-10 col-sm-10">
                    <input type="email" class="form-control" id="colFormLabel" placeholder="Eamil Address">
                </div>
            </div>

            <div class="form-group row">
                <label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg">Address</label>
                <div class="col-lg-9 col-md-10 col-sm-10">
                    <input type="text" class="form-control" id="colFormLabel" placeholder="Address">
                </div>
            </div>

            <div class="form-group row">
                <label for="colFormLabelLg" class="col-lg-3 col-md-5 col-sm-6  col-form-label col-form-label-lg">Donation Amount($)*</label>
                <div class="col-lg-9 col-md-10 col-sm-10">
                    <input type="text" class="form-control" id="colFormLabel" placeholder="Donation Amount">
                </div>
            </div>

            <div class="form-group row">
                <label for="colFormLabelLg" class="col-lg-3 col-md-5 col-sm-6 col-form-label col-form-label-lg">Donation Comments</label>
                <div class="col-lg-9 col-md-10 col-sm-10">
                    <textarea placeholder="Place comments here...." rows="6" style="height: 100%; width: 100%;"></textarea>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-1">
                    <button type="submit" class="btn btn-light">Submit</button>
                </div>
            </div>
        </form>
    </div>
}

