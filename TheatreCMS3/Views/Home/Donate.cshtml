@{
    ViewBag.Title = "Donate";
}

<div class="container">
    <div class="container-fluid">
        <div class="row text-center" style="width: auto; height: 80px; margin-top: 40px; background-image: url('https://nate-brink.com/images/trippy.jpg');">
            <div class="col-xl flex-wrap align-content-center">
                <h2 class="bg-dark" style="font-family: Broadway;">Consider Making a Donation</h2>
            </div>
        </div>
    </div>
    <form class="bg-danger rounded container-fluid">
        <!-- NAME row -->
        <div class="container-fluid form-row pt-4">
            <div class="form-group col-sm-4">
                <label for="DonateFormFName">Name*</label>
            </div>
            <div class="form-group col-sm-4">
                <input type="text" placeholder="First Name" class="form-control" id="DonateFormFName">
            </div>
            <div class="form-group col-sm-4">
                <input type="text" placeholder="Last Name" class="form-control" id="DonateFormLName">
            </div>
        </div>
        <!-- End NAME row -->
        <!-- EMAIL row -->
        <div class="container-fluid form-row">
            <div class="form-group col-sm-4">
                <label for="DonateFormEmail">Email Address*</label>
            </div>
            <div class="form-group col-sm-8">
                <input type="email" placeholder="Email Address" class="form-control" id="DonateFormEmail">
            </div>
        </div>
        <!-- End EMAIL row -->
        <!-- ADDRESS row -->
        <div class="container-fluid form-row">
            <div class="form-group col-sm-4">
                <label for="DonateFormAddress">Address</label>
            </div>
            <div class="form-group col-sm-8">
                <input type="text" placeholder="Address" class="form-control" id="DonateFormAddress">
            </div>
        </div>
        <!-- End ADDRESS row -->
        <!-- DONATION row -->
        <div class="container-fluid form-row">
            <div class="form-group col-sm-4">
                <label for="DonateFormAmount">Donation Amount($)*</label>
            </div>
            <div class="form-group col-sm-8">
                <input type="number" placeholder="Donation Amount" class="form-control" id="DonateFormAmount">
            </div>
        </div>
        <!-- End DONATION row -->
        <!-- COMMENTS row -->
        <div class="container-fluid form-row">
            <div class="form-group col-sm-4">
                <label for="DonateFormComments">Donation Comments</label>
            </div>
            <div class="form-group col-sm-8">
                <input type="number" placeholder="Place comments here." class="form-control" id="DonateFormComments">
            </div>
        </div>
        <!-- End COMMENTS row -->
        <!-- SUBMIT row -->
        <div class="container-fluid form-row">
            <div class="form-group col-sm-4">
                <button type="submit" class="btn btn-light">Submit</button>
            </div>
        </div>
        <!-- End SUBMIT row -->
    </form>
</div>
