
@{
  ViewBag.Title = "Donate";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
  <div class="donation-title-bgimage donation-rounded-corners">
    <h2 class="donation-font-title">Consider Making a Donation</h2>
  </div>
  <div class="container cms-bg-main-light donation-rounded-corners">
    <div class="row">
      <div class="col-sm-2">
        <label for="firstname" class="col-form-label  mt-3">Name*</label>
      </div>
      <div class="col-sm-5">
        <input type="text" class="form-control  mt-3" placeholder="First Name" aria-label="First Name">
      </div>
      <div class="col-sm-5">
        <input type="text" class="form-control  mt-3" placeholder="Last Name" aria-label="Last Name">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="inputEmail4" class="form-label mt-2">Email Address*</label>
      </div>
      <div class="col-sm-10">
        <input type="email" class="form-control mt-3" id="inputEmail4" placeholder="Email Address">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="inputAddress" class="form-label mt-2">Address</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control mt-3" id="inputAddress" placeholder="1234 Main St">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="Donation" class="form-label mt-2">Donation Amount($)*</label>
      </div>
      <div class="col-sm-10">
        <input type="text" class="form-control mt-3" id="inputCity" placeholder="Donation">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <label for="exampleFormControlTextarea1" class="form-label mt-2">Donation Comments</label>
      </div>
      <div class="col-sm-10">
        <textarea class="form-control mt-3" id="exampleFormControlTextarea1" rows="6" placeholder="Donation Comments"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <button type="submit" class="btn btn-primary m-3">Donate</button>
      </div>
    </div>
  </div>
</div>