@{
  ViewBag.Title = "Donate";
}

<!--This is for the title image-->
<style>
    #Donation-title {
        background-image: url('https://images.pexels.com/photos/432361/pexels-photo-432361.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=750&w=1260');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: cover;
    }
</style>

<!--Title-->
<div id="Donation-title" class="mt-4 rounded-top">
    <h1 class="text-center">Consider Making A Donation</h1>

<!--Donation Form-->
    <div id="Donation-container" class="cms-bg-main-light rounded-bottom">
        <form action="" method="POST" class="row g-3 mx-auto">
            <div class="form-group col-md-6 mt-2">
                <label class="form-label">First Name</label>
                <input type="text" class="form-control" placeholder="First Name">
            </div>
            <div class="form-group col-md-6 mt-2">
                <label class="form-label">Last Name</label>
                <input type="text" class="form-control" placeholder="Last Name">
            </div>
            <div class="form-group col-12">
                <label class="form-label">Email</label>
                <input type="email" class="form-control" placeholder="Email">
            </div>
            <div class="form-group col-12">
                <label class="form-label">Address</label>
                <input type="text" class="form-control" placeholder="Address">
            </div>
            <div class="form-group col-12">
                <label class="form-label">Donation Amount</label>
                <input type="number" class="form-control" placeholder="Donation Amount">
            </div>
            <div class="form-group col-12">
                <label class="form-label">Comment</label>
                <textarea class="form-control" placeholder="Comment" rows="3"></textarea>
            </div>
            <div class="form-group col-12">
                <button type="submit" class="btn cms-bg-light">Submit</button>
            </div>
        </form>
    </div>
</div>