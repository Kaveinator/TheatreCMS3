@{
    ViewBag.Title = "Donate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="---------">Consider Making a Donation</h2>

<form>
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="----" placeholder="First Name" />
        <input type="text" class="----" placeholder="Last Name" />
    </div>
    <div class="form-group">
        <label>Email Address</label>
        <input type="email" class="----" placeholder="Email Address" />
    </div>
    <div class="form-group">
        <label>Address</label>
        <input type="text" class="----" placeholder="Address" />
    </div>
    <div class="form-group">
        <label>Donation Amount ($)</label>
        <input type="number" class="----" placeholder="Donation Amount" />
    </div>
    <div class="form-group">
        <label>Donation Comments</label>
        <input type="text" class="----" placeholder="Place comments here." />
    </div>
    <button type="submit" class="----">Submit</button>
</form>